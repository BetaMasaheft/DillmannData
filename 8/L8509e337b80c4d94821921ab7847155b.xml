               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [amh. <foreign xml:lang="gez">ረባ፡</foreign> id., <foreign xml:lang="ar">رَبِحَ</foreign> <cit type="translation" xml:lang="la"><quote> lucratus fuit </quote></cit> mercatura; contigua sunt <foreign xml:lang="ar">رَبَا</foreign> <foreign xml:lang="syr">ܪܒܳܐ</foreign> <foreign xml:lang="he">רָבָה</foreign>; notio prima est <cit type="translation" xml:lang="la"><quote> multum </quote></cit> vel <cit type="translation" xml:lang="la"><quote> magnum fieri </quote></cit> vel <cit type="translation" xml:lang="la"><quote> esse </quote></cit>, cujus vestigium relictum est in <foreign xml:lang="gez">ይርባሕ፡</foreign> et <foreign xml:lang="gez">ያርብሕ፡</foreign> <gramGrp> <pos expand="Substantivum">subst.</pos> </gramGrp>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይርባሕ፡</foreign> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> lucrari </quote></cit>, <cit type="translation" xml:lang="la"><quote> lucrificare </quote></cit>, <cit type="translation" xml:lang="la"><quote> utilitatem percipere </quote></cit>, <gramGrp> <pos expand="absolute">abs.</pos> </gramGrp> <ref cRef="Sap." loc="6,27">Sap. 6,27</ref>; <foreign xml:lang="gez">ኤጲስ፡ ቆጶስ፡ ኢያፍቅር፡ ይርባሕ፡</foreign> <ref cRef="Syn." loc="284">Syn. f. 284</ref>; (conjuges) <foreign xml:lang="gez">እመ፡ ረብሑ፡</foreign> <cit type="translation" xml:lang="la"><quote> si </quote></cit> (rem familiarem) <cit type="translation" xml:lang="la"><quote> acquisiverunt </quote></cit>, <foreign xml:lang="gez">ትንሣእ፡ ብእሲት፡ መንፈቀ፡ ረባሖሙ፡</foreign> F.N. 42,3; <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> rei: <ref cRef="Matth." loc="16,26">Matth. 16,26</ref>; <ref cRef="Phil." loc="3,8">Phil. 3,8</ref>; <foreign xml:lang="gez">ምንተ፡ ረባሕነ፡ ዘዐቀብነ፡ ትእዛዘ፡</foreign> <ref cRef="Mal." loc="3,14">Mal. 3,14</ref>; <ref cRef="Matth." loc="25,16">Matth. 25,16</ref> <lbl expand="sequens">seq.</lbl>; <ref cRef="Jac." loc="4,13">Jac. 4,13</ref>; 1 <ref cRef="Petr." loc="3,1">Petr. 3,1</ref>; <foreign xml:lang="gez">አንትሙ፡ ትረብሑ፡ በመዊኦቶሙ፡ ስመ፡ ክቡረ፡</foreign> <ref cRef="Jsp. " loc="365">Jsp.  p. 365</ref>; <ref cRef="Jsp." loc="352.">Jsp. p. 352.</ref> 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> lucrosum </quote></cit>, <cit type="translation" xml:lang="la"><quote> utilem esse </quote></cit>, <cit type="translation" xml:lang="la"><quote> lucro cedere </quote></cit>, <cit type="translation" xml:lang="la"><quote> utilitatem parere </quote></cit> alicui, <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> <lbl expand="persona">pers.</lbl>, <foreign xml:lang="gez">ይረብሐከ፡ ፈድፋደ፡ እምነ፡</foreign> <foreign xml:lang="grc">λυσιτελήσει σοι μᾶλλον ἤ</foreign> <ref cRef="Sir." loc="29,11">Sir. 29,11</ref>; <foreign xml:lang="gez">በእንተ፡ ኵሉ፡ ዘይረብሐከ፡ ወይበቍዐከ፡</foreign> <ref cRef="Sir." loc="42,5">Sir. 42,5</ref>; <ref cRef="Jer." loc="23,32">Jer. 23,32</ref>; <foreign xml:lang="gez">ቦ፡ ዘይረብሐኪ፡ ለእመ፡ ኪያየ፡ ኀደጊ፡</foreign> <ref cRef="Jes." loc="57,8">Jes. 57,8</ref>; <foreign xml:lang="gez">ከመ፡ ይርብሖሙ፡</foreign> <ref cRef="Judae" loc="16">Judae 16</ref>; <foreign xml:lang="gez">ይሜህሩ፡ በዘይረብሖሙ፡</foreign> <ref cRef="Tit." loc="1,11">Tit. 1,11</ref> <lbl expand="romanae editionis">rom.</lbl>; <lbl expand="cum">c.</lbl> <lbl expand="duplex">dupl.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <foreign xml:lang="gez">ምንተ፡ ይረብሖ፡ ለእመ፡ አርታዕከ፡ ፍናዊከ፡</foreign> <ref cRef="Job" loc="22,3">Job 22,3</ref>. 
</sense> <sense n="3" xml:id="D3"> ut videtur, etiam: <cit type="translation" xml:lang="la"><quote> lucrum redundare </quote></cit> alicui: <ref cRef="Tit." loc="1,11">Tit. 1,11</ref> Platt. 
</sense> </sense>
               
