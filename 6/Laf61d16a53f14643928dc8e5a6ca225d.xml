               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> <subc>I,2</subc> [convenire videtur cum <foreign xml:lang="ar">نَزَهَ</foreign> (<foreign xml:lang="gez">ነዝሀ፡</foreign>) <cit type="translation" xml:lang="la">
                            <quote> semovit </quote>
                        </cit>; <cit type="translation" xml:lang="la">
                            <quote> avertit </quote>
                        </cit>, <cit type="translation" xml:lang="la">
                            <quote> cohibuit </quote>
                        </cit> ab inhonesto; <foreign xml:lang="ar">نَزُهَ</foreign> <cit type="translation" xml:lang="la">
                            <quote> remotus fuit ab omni pravo </quote>
                        </cit> (vicinum <foreign xml:lang="ar">نَزَعَ</foreign>); in caeteris linguis aliae radices frequentantur <foreign xml:lang="he">נִחַם</foreign>, <foreign xml:lang="syr">ܬܘܳܐ</foreign>, <foreign xml:lang="he">תְּהָה</foreign>, <foreign xml:lang="ar">نَدِمَ</foreign>] 1) <cit type="translation" xml:lang="la">
                            <quote> poenitere </quote>
                        </cit>: <ref cRef="Ex." loc="13,17">Ex. 13,17</ref>; <ref cRef="Ps." loc="109,5">Ps. 109,5</ref>; <ref cRef="Ps." loc="131,11">Ps. 131,11</ref>; <ref cRef="Sir." loc="30,28">Sir. 30,28</ref>; <ref cRef="Matth." loc="27,3">Matth. 27,3</ref>; <ref cRef="Hen." loc="55,1">Hen. 55,1</ref>; <lbl expand="construitur cum">c.c.</lbl> <foreign xml:lang="gez">እምነ፡</foreign> rei: <foreign xml:lang="gez">እግዚአብሔር፡ ነስሐ፡ እምዘነበበ፡</foreign> <ref cRef="Jon." loc="3,10">Jon. 3,10</ref>; et <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">በእንተ፡</foreign>, ut: <foreign xml:lang="gez">ይኔስሕ፡ በእንተ፡ እኪት፡</foreign> <ref cRef="Joel" loc="2,13">Joel 2,13</ref>; <ref cRef="Am." loc="7,3">Am. 7,3</ref>; <ref cRef="Jer." loc="18,8">Jer. 18,8</ref>; <ref cRef="Jer." loc="18,10">Jer. 18,10</ref>; <ref cRef="Gen." loc="6,6">Gen. 6,6</ref>; <ref cRef="Gen." loc="6,7">Gen. 6,7</ref>; <lbl expand="sequens">seq.</lbl> <foreign xml:lang="gez">እስመ፡</foreign> vel <foreign xml:lang="gez">ዘ፡</foreign> 1 <ref cRef="Reg." loc="15,11">Reg. 15,11</ref>; <ref cRef="1 Reg." loc="15,35">1 Reg. 15,35</ref>. <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la">
                                <quote> poenitentiam agere </quote>
                            </cit>, (<cit type="translation" xml:lang="la">
                                <quote> resipiscere </quote>
                            </cit>): <ref cRef="Matth." loc="3,2">Matth. 3,2</ref>; <ref cRef="Matth." loc="21,32">Matth. 21,32</ref>; <ref cRef="Luc. " loc="11,32">Luc.  11,32</ref>; <ref cRef="Luc." loc="13,3">Luc. 13,3</ref>; <ref cRef="Luc." loc="13,5">Luc. 13,5</ref>; <ref cRef="Luc." loc="15,7">Luc. 15,7</ref>; <ref cRef="Luc." loc="15,10">Luc. 15,10</ref> Platt; <ref cRef="Luc." loc="17,3">Luc. 17,3</ref>; <ref cRef="Rom." loc="2,5">Rom. 2,5</ref>; <ref cRef="Apoc. " loc="2,16">Apoc.  2,16</ref>; <ref cRef="Apoc." loc="2,21">Apoc. 2,21</ref>; <ref cRef="Apoc." loc="9,20">Apoc. 9,20</ref>; <ref cRef="Hen." loc="50,2">Hen. 50,2</ref>; <ref cRef="Hen." loc="50,4">Hen. 50,4</ref>; <ref cRef="Job" loc="22,23">Job 22,23</ref> (<foreign xml:lang="grc">ἐπιστραφῇς</foreign>); <ref cRef="Jes." loc="30,15">Jes. 30,15</ref> (<foreign xml:lang="grc">ἀποστραφείς</foreign>); <ref cRef="Jes." loc="46,8">Jes. 46,8</ref>; <ref cRef="Prov." loc="24,24">Prov. 24,24</ref>; <foreign xml:lang="gez">ነስሕ፡ ወተጋነይ፡</foreign> <ref cRef="Sir." loc="18,24">Sir. 18,24</ref>; <ref cRef="Sir." loc="48,15">Sir. 48,15</ref>; <foreign xml:lang="gez">ነስሑ፡ ወተመየጡ፡</foreign> <ref cRef="Hez." loc="14,6">Hez. 14,6</ref>; <ref cRef="Hez." loc="14,22">Hez. 14,22</ref>; <ref cRef="Hez." loc="33,11">Hez. 33,11</ref>; <lbl expand="construitur cum">c.c.</lbl> <foreign xml:lang="gez">እምነ፡</foreign> peccati: <foreign xml:lang="gez">ተመየጡ፡ ወነስሑ፡ እምኀጢአትክሙ፡</foreign> <ref cRef="Hez. " loc="18,30">Hez.  18,30</ref>; <ref cRef="Jer." loc="8,6">Jer. 8,6</ref>; <foreign xml:lang="gez">ነስሑ፡ እምፍኖቶሙ፡ እኩይ፡</foreign> <ref cRef="Jon." loc="3,10">Jon. 3,10</ref>; <ref cRef="Apoc." loc="9,21">Apoc. 9,21</ref>; <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> poenitentiae: <foreign xml:lang="gez">እስከ፡ ይኔስሕ፡ ንስሓ፡ ፍጽምተ፡</foreign> F.M. 6,2, et peccati: <foreign xml:lang="gez">ነስሕ፡ አበሳከ፡</foreign> <foreign xml:lang="grc">σμίκρυνον πρόσκομμα</foreign> <ref cRef="Sir." loc="17,25">Sir. 17,25</ref>; crebro in libris ecclesiasticis <cit type="translation" xml:lang="la">
                                <quote> poenitentiam </quote>
                            </cit> a clericis <cit type="translation" xml:lang="la">
                                <quote> impositam praestare </quote>
                            </cit>, ut Clem., Did., F.M., al.</sense> <sense n="3" xml:id="D3"> Hoc eodem verbo etiam <foreign xml:lang="grc">πλημμελεῖν</foreign> crebro exponitur, sive significet <cit type="translation" xml:lang="la">
                                <quote> poenitentia culpae poenas dare </quote>
                            </cit>, sive <cit type="translation" xml:lang="la">
                                <quote> delinquere </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> culpam contrahere </quote>
                            </cit>, cujus posthac poenitentia poenae luendae sint: <ref cRef="Lev." loc="4,13">Lev. 4,13</ref>; <ref cRef="Lev." loc="4,22">Lev. 4,22</ref>; <ref cRef="Lev." loc="4,27">Lev. 4,27</ref>; <ref cRef="Lev." loc="5,17">Lev. 5,17</ref>; <ref cRef="Lev." loc="5,19">Lev. 5,19</ref>; <ref cRef="Ps." loc="33,22">Ps. 33,22</ref>; <ref cRef="Ps. " loc="33,23">Ps.  33,23</ref>; <ref cRef="Ps." loc="118,67">Ps. 118,67</ref>; <ref cRef="Jer." loc="2,3">Jer. 2,3</ref>; <ref cRef="Sir." loc="9,13">Sir. 9,13</ref>. <lbl expand="Vocabularium Aethiopicum, -a -a">Voc. Ae.</lbl>: <foreign xml:lang="gez">ተመይጠ፡ ተሠውጠ፡ ነስሐ፡ ገብአ፡ ብ፡ ተመለሰ፤ ነስሐሰ፡ አዘነ፡ ይ፡</foreign> </sense> </sense>
               
