               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [amh. <foreign xml:lang="gez">ረታ፡</foreign>; respondet syr. <foreign xml:lang="syr">ܬܪܰܨ</foreign> (<foreign xml:lang="ar">تَرُصَ</foreign>) <lbl expand="videas">vid.</lbl> <bibl><ptr target="bm:Ewald1855LehrbHebr"/><citedRange unit="page"> 74</citedRange></bibl>; <ref cRef="Scaliger p." loc="689">Scaliger p. 689</ref>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይርታዕ፡</foreign> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> rectum </quote></cit>, <cit type="translation" xml:lang="la"><quote> directum </quote></cit>, <cit type="translation" xml:lang="la"><quote> erectum esse </quote></cit> vel <cit type="translation" xml:lang="la"><quote> fieri </quote></cit>, sensu physico: <foreign xml:lang="gez">ጠዋይ፡ ኢይትከሀል፡ ረቲዐ፡</foreign> <ref cRef="Koh." loc="1,15">Koh. 1,15</ref>; <ref cRef="Luc." loc="13,13">Luc. 13,13</ref>; <ref cRef="Ps. " loc="19,9">Ps.  19,9</ref>; de via <ref cRef="Ps." loc="118,5">Ps. 118,5</ref>; <foreign xml:lang="gez">ከመ፡ ይርታዕ፡ ፍናዊከ፡</foreign> <ref cRef="Prov." loc="3,6">Prov. 3,6</ref> <lbl expand="varia lectio">var.</lbl>; <foreign xml:lang="gez">ከመ፡ እምኀበ፡ እግዚአብሔር፡ ይርታዕ፡ አሰሩ፡</foreign> <ref cRef="Prov." loc="16,9">Prov. 16,9</ref> (1); de sede (erigi vel stabiliri): <foreign xml:lang="gez">ይረትዕ፡ በጽድቅ፡ መንበሩ፡</foreign> <ref cRef="Prov." loc="25,5">Prov. 25,5</ref>; <ref cRef="Jes." loc="16,5">Jes. 16,5</ref>. 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> restitui </quote></cit>, <cit type="translation" xml:lang="la"><quote> recte dispositum </quote></cit>, <cit type="translation" xml:lang="la"><quote> compositum esse </quote></cit>: <foreign xml:lang="gez">ይረትዕ፡ ልሳነ፡ በሃም፡</foreign> <ref cRef="Jes." loc="35,6">Jes. 35,6</ref>; <foreign xml:lang="gez">ተበትከ፡ አሕባልኪ፡ እስመ፡ ኢረትዐ፡</foreign> <ref cRef="Jes." loc="33,23">Jes. 33,23</ref>; <foreign xml:lang="gez">ረትዐ፡ መንግሥቱ፡ ለፈርዖን፡</foreign> <ref cRef="Kuf." loc="40">Kuf. 40</ref>; <foreign xml:lang="gez">በእንተ፡ ጸሎቱ፡ ይረትዕ፡ ዓለም፡</foreign> (mundus) <ref cRef="Sx. Jac." loc="2.">Sx. Jac. 2.</ref> 
</sense> <sense n="3" xml:id="D3"> <cit type="translation" xml:lang="la"><quote> prospere agere </quote></cit> de personis, <cit type="translation" xml:lang="la"><quote> bene succedere </quote></cit> vel <cit type="translation" xml:lang="la"><quote> provenire </quote></cit> de rebus: {<ref target="#c1428"/> <foreign xml:lang="gez">ውእቱ፡} ረትዐ፡</foreign> <foreign xml:lang="grc">αὐτὸς κατευθύνθη</foreign> <ref cRef="Sir." loc="49,2">Sir. 49,2</ref>; <foreign xml:lang="gez">ይርታዕ፡ ኵሉ፡ ተክልክሙ፡</foreign> <ref cRef="Kuf." loc="7.">Kuf. 7.</ref> 
</sense> <sense n="4" xml:id="D4"> <cit type="translation" xml:lang="la"><quote> rectum </quote></cit> i.e. <cit type="translation" xml:lang="la"><quote> verum esse </quote></cit>, nec non: <cit type="translation" xml:lang="la"><quote> recte dicere </quote></cit>, <cit type="translation" xml:lang="la"><quote> verum dicere </quote></cit>: <foreign xml:lang="gez">ይረትዕ፡ ስምዖሙ፡ በቅድመ፡ ገጽየ፡</foreign> <ref cRef="Jer." loc="37,20">Jer. 37,20</ref>; <foreign xml:lang="gez">ረታዕከ፡</foreign> <foreign xml:lang="grc">εὖ ἔφης</foreign> <cit type="translation" xml:lang="la"><quote> recte ais </quote></cit> Cyr. c. <ref cRef="Pall." loc="68">Pall. f. 68</ref>; <foreign xml:lang="gez">ረታዕከ፡ ኦካልእየ፡</foreign> <foreign xml:lang="grc">ὀρθῶς ὦ ἑταῖρε</foreign> Cyr. c. Pall. f. 95. 
</sense> <sense n="5" xml:id="D5"> <cit type="translation" xml:lang="la"><quote> justum esse </quote></cit>, <cit type="translation" xml:lang="la"><quote> justam causam habere </quote></cit> <ref cRef="Deut." loc="25,1">Deut. 25,1</ref>; hinc <sense n="a" xml:id="D5a"> imperson. <cit type="translation" xml:lang="la"><quote> justum </quote></cit>, <cit type="translation" xml:lang="la"><quote> aequum esse </quote></cit>, <lbl expand="sequens">seq.</lbl> <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <ref cRef="Ps." loc="118,5">Ps. 118,5</ref>; <ref cRef="Jac." loc="3.10">Jac. 3.10</ref>; vel <lbl expand="sequens">seq.</lbl> Infin., ut: <foreign xml:lang="gez">ይደሉ፡ ወይረትዕ፡ ሰጊድ፡</foreign> Sx. Enc. (<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ርቱዕ፡</foreign>). 
</sense> <sense n="b" xml:id="D5b"> <lbl expand="cum">c.</lbl> <gramGrp> <pos expand="pronomen suffixum">pron. suff.</pos> </gramGrp> <lbl expand="persona">pers.</lbl> <cit type="translation" xml:lang="la"><quote> rectum </quote></cit>, <cit type="translation" xml:lang="la"><quote> justum </quote></cit>, <cit type="translation" xml:lang="la"><quote> aequum videri </quote></cit> alicui: <foreign xml:lang="gez">ረስዩኒ፡ ዘፈቀድክሙ፡ ወዘይረትዐክሙ፡</foreign> <ref cRef="Jer." loc="33,14">Jer. 33,14</ref>; <foreign xml:lang="gez">ዘረትዖ፡ በቅድመ፡ አዕይንቲሁ፡</foreign> 1 <ref cRef="Par." loc="21,23">Par. 21,23</ref>; <ref cRef="Matth." loc="20,7">Matth. 20,7</ref>; <lbl expand="sequens">seq.</lbl> <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> vel <foreign xml:lang="gez">ከመ፡</foreign>, ut <ref cRef="Luc." loc="1,3">Luc. 1,3</ref>; <ref cRef="1 Reg." loc="18,23">1 Reg. 18,23</ref>. 
</sense> 
</sense> </sense>
               
            <sense xml:id="Tmain" xml:lang="en" source="#traces"> <cit type="transcription" xml:lang="gez"><quote>ratʿa</quote></cit> <sense n="G" xml:id="TG"> <foreign xml:lang="gez">ረትዐ፡</foreign> <cit type="transcription" xml:lang="gez"><quote>ratʿa</quote></cit> <subc>I,1</subc> <foreign xml:lang="gez">ይረትዕ፡</foreign>, <foreign xml:lang="gez">ይርታዕ፡</foreign> «<cit type="translation" xml:lang="fr"><quote>être droit, juste, équitable</quote></cit>, <cit type="translation" xml:lang="fr"><quote>être debout</quote></cit>, <cit type="translation" xml:lang="fr"><quote>être favorable</quote></cit>» ― <foreign xml:lang="am">ቀና፡</foreign> Ms. <ref type="BM" target="BNFabb217">BNFabb217</ref>, fol. 59r. <lb/>
 <bibl><ptr target="bm:Grebaut1952SuppLexicon"/><citedRange unit="page"> 152</citedRange></bibl> 
</sense> <sense n="L" xml:id="TL"> <foreign xml:lang="gez">ረትዐ</foreign> <cit type="transcription" xml:lang="gez"><quote>ratʿa</quote></cit> (yǝrtāʿ) <cit type="translation" xml:lang="en"><quote>be (become) straight</quote></cit>, <cit type="translation" xml:lang="en"><quote>be straightened</quote></cit>, <cit type="translation" xml:lang="en"><quote>be right</quote></cit>, <cit type="translation" xml:lang="en"><quote>be righteous</quote></cit>, <cit type="translation" xml:lang="en"><quote>be just</quote></cit>, <cit type="translation" xml:lang="en"><quote>be truthful</quote></cit>, <cit type="translation" xml:lang="en"><quote>be sincere</quote></cit>, <cit type="translation" xml:lang="en"><quote>become established</quote></cit>, <cit type="translation" xml:lang="en"><quote>be restored</quote></cit>, <cit type="translation" xml:lang="en"><quote>be well-ordered</quote></cit>, <cit type="translation" xml:lang="en"><quote>be successful</quote></cit>, <cit type="translation" xml:lang="en"><quote>prosper</quote></cit>, <cit type="translation" xml:lang="en"><quote>be proper</quote></cit>; also used with indirect object suffix pronouns; e.g. <foreign xml:lang="gez">ረትዐኒ</foreign> <cit type="transcription" xml:lang="gez"><quote>ratʿanni</quote></cit> <cit type="translation" xml:lang="en"><quote>it seemed right to me</quote></cit> <bibl><ptr target="bm:Leslau1987dic"/><citedRange unit="page"> 475b</citedRange></bibl> 
</sense> </sense></entry>
