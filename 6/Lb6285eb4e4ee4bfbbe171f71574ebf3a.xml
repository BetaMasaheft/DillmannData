            <entry xml:id="Lb6285eb4e4ee4bfbbe171f71574ebf3a" n="2513">
               <form>
                  <foreign xml:lang="gez">ምስሐግ</foreign>
               </form>
               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> vel <foreign xml:lang="gez">መስሐግ፡</foreign> <gramGrp> <pos expand="Substantivum">subst.</pos> </gramGrp>, <lbl expand="pluralis">Pl.</lbl> <foreign xml:lang="gez">መሳሕግት፡</foreign>, <lbl expand="pluralis">Pl.</lbl> <lbl expand="">Plur.</lbl> <foreign xml:lang="gez">መሳሕግታት፡</foreign> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la">
                                <quote> vestimentum </quote>
                            </cit> vel <cit type="translation" xml:lang="la">
                                <quote> stragulum vile </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> crassum </quote>
                            </cit>, (secundum Ludolfum: <cit type="translation" xml:lang="la">
                                <quote> e palmae foliis contextum </quote>
                            </cit> in lex. Ae. c. 107; <lbl expand="conferas">cfr.</lbl> Lud. <lbl expand="lexicon">lex.</lbl> Amh. sub <foreign xml:lang="gez">ሰሌን፡</foreign> et <foreign xml:lang="gez">ተሊስ፡</foreign>): <sense n="a" xml:id="D1a"> <cit type="translation" xml:lang="la">
                                    <quote> vestis monachorum </quote>
                                </cit> (e pilis, fibris, foliis texta): <foreign xml:lang="gez">እኍ፡ ለባሴ፡ ምስሐግ፡</foreign> <ref cRef="Phlx." loc="133">Phlx. 133</ref>; <foreign xml:lang="gez">መሳግሕታት፡</foreign> (sic) <ref cRef="Phlx." loc="189.">Phlx. 189.</ref> </sense> <sense n="b" xml:id="D1b"> <cit type="translation" xml:lang="la">
                                    <quote> stragulum </quote>
                                </cit> (squalidum) <ref cRef="Sx. Nah." loc="5">Sx. Nah. 5</ref>; <foreign xml:lang="gez">ተነጸፍከ፡ ምስሐገ፡</foreign> (v. <foreign xml:lang="gez">መስሐገ፡</foreign>) <foreign xml:lang="gez">በታሕቴከ፡</foreign> (<foreign xml:lang="grc">στρώσουσι σῆψιν</foreign> <foreign xml:lang="he">רִמַּה</foreign>!) <ref cRef="Jes." loc="14,11">Jes. 14,11</ref>.</sense> </sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la">
                                <quote> luctus </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> cultus lugubris </quote>
                            </cit>, <foreign xml:lang="gez">ትግበር፡ ላቲ፡ ዳሰ፡ ኀበ፡ ትነብር፡ ውስተ፡ ምስሐግ፡</foreign> (v. <foreign xml:lang="gez">መስሐግ፡</foreign>) <foreign xml:lang="gez">ወትረ፡</foreign> <foreign xml:lang="grc">ποίει σκέπην πένθους</foreign> <ref cRef="Jes." loc="16,3">Jes. 16,3</ref>; <foreign xml:lang="gez">ኢትባእ፡ ምስሌሆሙ፡ ቤተ፡ ምስሐግ፡</foreign> (v. <foreign xml:lang="gez">መስሐግ፡</foreign>) <ref cRef="Jer." loc="16,8">Jer. 16,8</ref>.</sense> <sense n="3" xml:id="D3"> <cit type="translation" xml:lang="la">
                                <quote> lamentum </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> carmen lugubre </quote>
                            </cit>, <foreign xml:lang="grc">θρῆνος</foreign>: <foreign xml:lang="gez">ወይቤሉ፡ ዛቲ፡ ምስሐግ፡ ለኢዮስያስ፡ ወሠርዕዋ፡ ለይእቲ፡ ምስሐግ፡ በኵሉ፡ ምስሐግ፡ ለኵሉ፡ እስራኤል፡ ነያ፡ ጽሕፍት፡ ውስተ፡ መጽሐፈ፡ ምስሐግ፡</foreign> <ref cRef="2 Par. " loc="35,25">2 Par.  35,25</ref>. – <lbl expand="Vocabularium Aethiopicum, -a -a">Voc. Ae.</lbl>: <foreign xml:lang="gez">ምስሐግ፡ ብ፡ የብርድ፡ ቤት፡</foreign>; <cit type="translation" xml:lang="la">
                                <quote> aliud </quote>
                            </cit>: <foreign xml:lang="gez">መሰግ፡</foreign> (pro <foreign xml:lang="gez">መስሐግ፡</foreign>) <foreign xml:lang="gez">ዘ፡ የሚበርድ፡ ቤት፡ ቤተ፡ ላሕሂ፡ ይ።</foreign> </sense> </sense>
               
