               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [<foreign xml:lang="he">שְרָא</foreign> <foreign xml:lang="syr">ܫܪܳܐ</foreign> <cit type="translation" xml:lang="la"><quote> solvit </quote></cit>, <cit type="translation" xml:lang="la"><quote> absolvit </quote></cit>, <cit type="translation" xml:lang="la"><quote> abrogavit </quote></cit>, <cit type="translation" xml:lang="la"><quote> abolevit </quote></cit>, <cit type="translation" xml:lang="la"><quote> dimisit </quote></cit>; <foreign xml:lang="ar">سَرَا</foreign> (<foreign xml:lang="ar">سَرْوٌ</foreign>) <cit type="translation" xml:lang="la"><quote> removit </quote></cit> rem ab aliquo; amh. <foreign xml:lang="gez">ሰረየ፡</foreign> <cit type="translation" xml:lang="la"><quote> remisit </quote></cit>; praeterea <lbl expand="conferas">cfr.</lbl> <foreign xml:lang="gez">ሠረየ፡</foreign> <cit type="translation" xml:lang="la"><quote> mederi </quote></cit>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይስረይ፡</foreign> et <foreign xml:lang="gez">ይስሪ፡</foreign>, <cit type="translation" xml:lang="la"><quote> remittere </quote></cit>, <cit type="translation" xml:lang="la"><quote> ignoscere </quote></cit>, <cit type="translation" xml:lang="la"><quote> condonare </quote></cit> alicui peccatum, delictum, passim: <cit type="translation" xml:lang="la"><quote> expiare </quote></cit>; <lbl expand="construitur cum">c.c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> peccati et <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ለ፡</foreign> pers.: <foreign xml:lang="grc">λύειν</foreign>: <foreign xml:lang="gez">ሰረየ፡ ኀጢአቶሙ፡</foreign> <ref cRef="Job" loc="42,9">Job 42,9</ref>; <foreign xml:lang="gez">ይሰሪ፡ ለከ፡ ኀጢአተከ፡</foreign> <ref cRef="Sir." loc="28,2">Sir. 28,2</ref>; <foreign xml:lang="grc">ἄφες</foreign> <ref cRef="Gen." loc="50,17">Gen. 50,17</ref>; <foreign xml:lang="grc">ἀνήσω</foreign> <ref cRef="Jes." loc="1,14">Jes. 1,14</ref>; <foreign