         <div>
            <entry xml:id="Lbb7334b398164b8c9143fa49d0108e99" n="9142">
               <form>
                  <foreign xml:lang="gez">አጽለመ</foreign>
               </form>
               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> <subc>II,1</subc> <sense n="1" xml:id="D1">
                     <cit type="translation" xml:lang="la">
                        <quote>obscurare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>caliginem</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>tenebras offundere</quote>
                     </cit> alicui, <cit type="translation" xml:lang="la">
                        <quote>obnubilare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>obfuscare</quote>
                     </cit>: Deus <foreign xml:lang="gez">ያጸልም፡ መዓልተ፡ ከመ፡ ሌሊት፡</foreign>
                     <ref cRef="Am." loc="5,8">Am. 5,8</ref>; <foreign xml:lang="gez">ኣጸልም፡ ዲቤሁ፡
                        ሊባኖስ፡ </foreign>
                     <ref cRef="Hez." loc="31,15">Hez. 31,15</ref>
                     <lbl expand="varia lectio">var.</lbl>; <ref cRef="Ps." loc="104,26">Ps.
                        104,26</ref>; <foreign xml:lang="gez">ሶበ፡ ኣጸልም፡ ደመና፡ ላዕለ፡ ምድር፡</foreign>
                     <ref cRef="Gen." loc="9,14">Gen. 9,14</ref>; astra (<cit type="translation" xml:lang="la">
                        <quote>deficere facere</quote>
                     </cit>), ut: <ref cRef="Hez." loc="32,7">Hez. 32,7</ref>; <ref cRef="Job " loc="9,7">Job 9,7</ref>; <foreign xml:lang="gez">አጽለሞ፡ ለፀሓይ፡</foreign>
                     <ref cRef="Kedr f." loc="28">Kedr f. 28</ref>; alias res: <foreign xml:lang="gez">ቅንአተ፡ እከይ፡ ያጸልም፡ ሠናያተ፡</foreign>
                     <foreign xml:lang="grc">ἀμαυροῖ </foreign>
                     <ref cRef="Sap." loc="4,12">Sap. 4,12</ref>; <foreign xml:lang="gez">እከዪሃ፡
                        ያጸልሞ፡ ከመ፡ ርእየተ፡ ድብ፡ ለገጻ፡ </foreign>
                     <foreign xml:lang="grc">σκοτοῖ</foreign>
                     <ref cRef="Sir." loc="25,17">Sir. 25,17</ref>; oculos: <foreign xml:lang="gez">አጽለመት፡ ጸዳላ፡ ለዐይን፡</foreign>
                     <ref cRef="Sx. Masc." loc="25 ">Sx. Masc. 25 </ref>Enc.; mentem, animum:
                        <foreign xml:lang="gez">ስካር፡ ያጸልም፡ ልበ፡</foreign>
                     <ref cRef="Clem." loc="118">Clem. f. 118</ref>; <foreign xml:lang="gez">አጽለምኩ፡
                        ኅሊናየ፡</foreign> (sc. peccatis) <ref cRef="Clem." loc="83.">Clem. f.
                        83.</ref>
                  </sense>
                  <sense n="2" xml:id="D2">
                     <cit type="translation" xml:lang="la">
                        <quote>tenebrescere</quote>
                     </cit>: <foreign xml:lang="gez">አጽለመ፡ ዲቤሁ፡ ሊባኖስ፡</foreign>
                     <foreign xml:lang="grc">ἐσκότασεν ἐπ᾽ αὐτὸν ὁ Λίβανος</foreign>
                     <ref cRef="Hez." loc="31,15">Hez. 31,15</ref>.</sense>
                  <sense n="3" xml:id="D3">
                     <cit type="translation" xml:lang="la">
                        <quote>nigrum reddere</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>denigrare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>nigrum colorem inducere</quote>
                     </cit>, <ref cRef="Matth. " loc="5,36">Matth. 5,36</ref>; <cb n="1259" xml:id="c1259"/>
                     <foreign xml:lang="gez">ገልዓት፡ ዘአጽለምዎሙ፡ በፍሕም፡</foreign>
                     <ref cRef="Sx. Mag." loc="27 ">Sx. Mag. 27 </ref> Enc.; <ref cRef="Const. Ap." loc="62 ">Const. Ap. 62 </ref>(<lbl expand="videas">vid. sub</lbl>
                     <foreign xml:lang="gez">ምርፋእ፡</foreign> col. 320).</sense>
               </sense>
               
