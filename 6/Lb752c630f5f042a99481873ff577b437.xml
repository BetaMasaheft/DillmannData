               <form>
                  <foreign xml:lang="gez">ለጸየ</foreign>
               <rs type="root"/>
                    </form>
               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> (etiam per <foreign xml:lang="gez">ፀ</foreign>) <lbl expand="radix">rad.</lbl> <lbl expand="inusitatus">inus.</lbl>, cui comparando sunt <foreign xml:lang="he">מָלַט מָלַץ מָרַט</foreign>; <foreign xml:lang="syr">ܡܠܰܛ ܡܪܰܛ</foreign>; <foreign xml:lang="ar">مَلِطَ مَلِصَ</foreign>, <foreign xml:lang="gez">መለጠ፡</foreign>, <foreign xml:lang="ar">مَلُسَ مَرَطَ</foreign>, quae omnia in notione <cit type="translation" xml:lang="la">
                            <quote> laevitatis </quote>
                        </cit> et <cit type="translation" xml:lang="la">
                            <quote> glabritatis </quote>
                        </cit> conveniunt, in specie <foreign xml:lang="he">מָרַת</foreign> <foreign xml:lang="ar">مَرَطَ</foreign> significat <cit type="translation" xml:lang="la">
                            <quote> pilos evellere </quote>
                        </cit>, <cit type="translation" xml:lang="la">
                            <quote> depilare </quote>
                        </cit>, <foreign xml:lang="ar">مَلَطَ</foreign> <cit type="translation" xml:lang="la">
                            <quote> rasit crines </quote>
                        </cit>, et <foreign xml:lang="ar">مَاسَ</foreign> (e <foreign xml:lang="ar">مَلَسَ</foreign>) <cit type="translation" xml:lang="la">
                            <quote> rasit caput </quote>
                        </cit>; amh. <lbl expand="radix">rad.</lbl> sonat <foreign xml:lang="gez">ላጨ።</foreign> Hinc </sense>
               
