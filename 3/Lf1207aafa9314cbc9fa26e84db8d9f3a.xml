               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [<foreign xml:lang="he">בָּלָה</foreign>, <foreign xml:lang="syr">ܒܠܺܝ</foreign>, <foreign xml:lang="ar">بَلِىَ</foreign>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይብሊ፡</foreign> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> usu et vetustate atteri </quote></cit> vel <cit type="translation" xml:lang="la"><quote> consumi </quote></cit>, <cit type="translation" xml:lang="la"><quote> veterascere </quote></cit>, <cit type="translation" xml:lang="la"><quote> senio </quote></cit> <cit type="translation" xml:lang="la"><quote> confici </quote></cit>, <cit type="translation" xml:lang="la"><quote> consenescere </quote></cit>, (<cit type="translation" xml:lang="la"><quote> putrescere </quote></cit>, <cit type="translation" xml:lang="la"><quote> marcescere </quote></cit>), de vestibus <ref cRef="Deut." loc="8,4">Deut. 8,4</ref>; <ref cRef="Deut." loc="29,4">Deut. 29,4</ref>; <ref cRef="Jos." loc="9,11">Jos. 9,11</ref>; <ref cRef="2 Esr." loc="19,21">2 Esr. 19,21</ref>; <foreign xml:lang="gez">ኵልክሙ፡ ከመ፡ ልብስ፡ ትበልዩ፡</foreign> <ref cRef="Jes." loc="50,9">Jes. 50,9</ref>; <ref cRef="Jes." loc="51,6">Jes. 51,6</ref>; <ref cRef="Ps." loc="101,27">Ps. 101,27</ref>; <foreign xml:lang="gez">ኵሉ፡ ዘነፍስ፡ ይበሊ፡ ከመ፡ ልብስ፡</foreign> <ref cRef="Sir." loc="14,17">Sir. 14,17</ref>; saxo: <foreign xml:lang="gez">ኰኵሕ፡ ይበሊ፡</foreign> <ref cRef="Job" loc="14,18">Job 14,18</ref>; plantis: <foreign xml:lang="gez">ዝናም፡ ያሠርጽ፡ ዘበልየ፡</foreign> <ref cRef="Job" loc="36,28">Job 36,28</ref>; fructibus <ref cRef="Kuf." loc="32">Kuf. 32</ref>; ossibus <ref cRef="Ps." loc="31,3">Ps. 31,3</ref>; corpore: <foreign xml:lang="gez">ወሀቦ፡ ለሥጋሁ፡ ጸጋ፡ ከመ፡ ኢይብሊ፡ ወለአዕጽምቲሁ፡ ከመ፡ ኢይማስን፡</foreign> <ref cRef="Sx. Haml." loc="26">Sx. Haml. 26</ref>; <foreign xml:lang="gez">በልየ፡ ሥጋየ፡ ወማእስየ፡</foreign> <ref cRef="Thren. " loc="3,4">Thren.  3,4</ref>; de quavis re: <foreign xml:lang="gez">ኵሉ፡ ግብር፡ ይበሊ፡ ወየኀልቅ፡</foreign> <foreign xml:lang="grc">σηπόμενον ἐκλείπει</foreign> <ref cRef="Sir." loc="14,19">Sir. 14,19</ref>; specie hominis: <foreign xml:lang="gez">ክብርየ፡ ተወለጠ፡ ወበልየ፡</foreign> <ref cRef="Dan." loc="10,8">Dan. 10,8</ref>; hominibus: <ref cRef="Ps." loc="6,7">Ps. 6,7</ref>; <ref cRef="Ps. " loc="17,49">Ps.  17,49</ref>; <foreign xml:lang="gez">በልየ፡</foreign> (<foreign xml:lang="gez">እስራኤል፡</foreign>) <foreign xml:lang="gez">በብሔረ፡ ነኪር፡</foreign> <ref cRef="Bar." loc="3,10">Bar. 3,10</ref>; <lbl expand="translate">transl.</lbl>: <foreign xml:lang="gez">በልየ፡ ነገር፡ እምኔክሙ፡</foreign> <cit type="translation" xml:lang="la"><quote> oratio consenuit </quote></cit> (<cit type="translation" xml:lang="la"><quote> et evanuit </quote></cit>) <cit type="translation" xml:lang="la"><quote> e vobis </quote></cit> <ref cRef="Job" loc="32,15">Job 32,15</ref>. 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> inveterascere </quote></cit>: <foreign xml:lang="gez">እለ፡ በልያ፡ በላዕሌሁ፡ ኀጣውኢሁ፡</foreign> 2 <ref cRef="Petr." loc="1,9">Petr. 1,9</ref>. 
</sense> <sense n="3" xml:id="D3"> <cit type="translation" xml:lang="la"><quote> antiquari </quote></cit>, <cit type="translation" xml:lang="la"><quote> obsolescere </quote></cit>: <ref cRef="Hebr." loc="8,13">Hebr. 8,13</ref>. 
</sense> </sense>
               
