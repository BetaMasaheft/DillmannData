               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> <gramGrp> <pos expand="Substantivum">subst.</pos> </gramGrp> (ut videtur, primitus <gramGrp> <pos expand="nomen">nom.</pos> <pos expand="abstractum, -e">abstr.</pos> </gramGrp> et <lbl expand="collatio, -is vel collectivum,&#xA;                            -e">coll.</lbl>, deinde <lbl expand="concretus, e (opp.&#xA;                            abstracto)">concr.</lbl>) <gramGrp> <gen value="not found">m.</gen> </gramGrp>, <lbl expand="pluralis">Pl.</lbl> <foreign xml:lang="gez">ሐዋርያት፡</foreign> [hinc <foreign xml:lang="ar">حَوَارِيٌّ</foreign>] <cit type="translation" xml:lang="la">
                            <quote> cursor </quote>
                        </cit>, <cit type="translation" xml:lang="la">
                            <quote> viator </quote>
                        </cit>: <foreign xml:lang="gez">ከመ፡ እኩይ፡ ሐዋርያ፡</foreign> <foreign xml:lang="grc">κακὸς ὁδοιπόρος</foreign> <ref cRef="Prov." loc="6,11">Prov. 6,11</ref>; <foreign xml:lang="grc">πρόδρομος</foreign> <ref cRef="Hebr." loc="6,20">Hebr. 6,20</ref>. <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la">
                                <quote> missus </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> legatus </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> nuntius </quote>
                            </cit>, <cit type="translation" xml:lang="la">
                                <quote> tabellarius </quote>
                            </cit>: <foreign xml:lang="grc">ἀπεσταλμένος</foreign> <ref cRef="Jes." loc="16,8">Jes. 16,8</ref>; <ref cRef="Joh." loc="9,7">Joh. 9,7</ref>; <foreign xml:lang="grc">ἄγγελοι</foreign> <foreign xml:lang="gez">ሐዋርያ፡</foreign> (coll.) <ref cRef="Gen." loc="32,4">Gen. 32,4</ref> (<ref cRef="Plur." loc="32,7">Plur. 32,7</ref>); <foreign xml:lang="grc">ἄγγελοι</foreign> <foreign xml:lang="gez">ሐዋርያት፡</foreign> <ref cRef="Jes." loc="30,4">Jes. 30,4</ref>; <ref cRef="Jes." loc="33,7">Jes. 33,7</ref>; <ref cRef="Jud." loc="11,14">Jud. 11,14</ref>; <ref cRef="Jud." loc="11,15">Jud. 11,15</ref>; 1 <ref cRef="Reg." loc="6,21">Reg. 6,21</ref>; <ref cRef="1 Reg." loc="16,19">1 Reg. 16,19</ref>; <ref cRef="2 Esr." loc="16,3">2 Esr. 16,3</ref>; <ref cRef="Judith" loc="1,11">Judith 1,11</ref>; <foreign xml:lang="gez">ፈነወ፡ ሐዋርያተ፡ ኀበ፡</foreign> vel <foreign xml:lang="gez">ውስተ፡</foreign> <ref cRef="Jes." loc="37,9">Jes. 37,9</ref>; <ref cRef="Jer. " loc="29,15">Jer.  29,15</ref>; <ref cRef="Hez." loc="17,15">Hez. 17,15</ref>; <foreign xml:lang="grc">φορολόγος</foreign> <ref cRef="2 Esr." loc="4,18">2 Esr. 4,18</ref>; <ref cRef="2 Esr. " loc="5,5">2 Esr.  5,5</ref>; <foreign xml:lang="grc">βιβλιοφόροι</foreign> <ref cRef="Esth." loc="3,13">Esth. 3,13</ref>; <ref cRef="Esth." loc="8,10">Esth. 8,10</ref>.</sense> <sense n="3" xml:id="D3"> In specie <cit type="translation" xml:lang="la">
                                <quote> apostolus </quote>
                            </cit> (Christi) ut <ref cRef="Rom." loc="1,1">Rom. 1,1</ref>; <ref cRef="1 Cor." loc="1,1">1 Cor. 1,1</ref>; <ref cRef="Marc." loc="6,30">Marc. 6,30</ref>; <ref cRef="Act." loc="9,27">Act. 9,27</ref>; <ref cRef="Judae" loc="17 ">Judae 17 </ref>al.; <foreign xml:lang="gez">ለክርስቶስ፡ ስሙ፡ መሲሕ፡ በእንተ፡ ቅብአት፡ በከመ፡ ሐዋርያ፡ በእንተ፡ ሐዊሮቱ፡ ይሰመይ፡</foreign> (<foreign xml:lang="grc">καθάπερ ἀπόστολος κατὰ τὴν ἀποστολήν</foreign>) Cyr. c. <ref cRef="Pall." loc="72.">Pall. f. 72.</ref> – Hinc <foreign xml:lang="gez">እንተ፡ ሐዋርያት፡</foreign> <cit type="translation" xml:lang="la">
                                <quote> apostolica </quote>
                            </cit>, (epitheton Ecclesiae) <ref cRef="Clem." loc="206">Clem. f. 206</ref>; <ref cRef="Clem." loc="208 ">Clem. f. 208 </ref>al., (et <cit type="translation" xml:lang="la">
                                <quote> fidei </quote>
                            </cit>, ut) <foreign xml:lang="gez">ርትዕት፡ ወእንተ፡ ሐዋርያት፡ ሃይማኖት፡</foreign> Cyr. ad <ref cRef="Theod." loc="7.">Theod. f. 7.</ref> – Praeterea <foreign xml:lang="gez">ሐዋርያ፡</foreign> (vel <foreign xml:lang="gez">መጽሐፈ፡ ሐዋርያ፡</foreign>) <cit type="translation" xml:lang="la">
                                <quote> Apostolus </quote>
                            </cit> significat <cit type="translation" xml:lang="la">
                                <quote> Epistolas Novi Testamenti </quote>
                            </cit> exceptis Paulinis, Lit., Lection., al. (ut <ref cRef="Sx. Masc." loc="8">Sx. Masc. 8</ref>).</sense> <sense n="4" xml:id="D4"> Caeterum non apostoli tantum <foreign xml:lang="gez">ሐዋርያት፡</foreign> nominantur, sed etiam <cit type="translation" xml:lang="la">
                                <quote> Jesus Christus </quote>
                            </cit> <foreign xml:lang="gez">ሐዋርያ፡</foreign> nomen gerit: <ref cRef="Hebr." loc="3,1">Hebr. 3,1</ref> (<foreign xml:lang="grc">ἀπόστολος</foreign>); <ref cRef="Hebr." loc="6,20">Hebr. 6,20</ref> (<foreign xml:lang="grc">πρόδρομος</foreign>); <foreign xml:lang="gez">በሰማይ፡ ኀበ፡ ቦአ፡ ኢየሱስ፡ ሐዋርያ፡ እምቅድሜነ፡</foreign> Mavâs. 67. Nec raro nomine <foreign xml:lang="gez">ሐዋርያ፡</foreign> alii quoque viri (apostolici) in ecclesia eminentes praedicantur, potissimum in Synaxario, ut <foreign xml:lang="gez">ጢሞና፡ ሐዋርያ፡ ወረድእ፡ እምኍልቆሙ፡ ለ፸ወ፪ አርድእት፡</foreign> <ref cRef="Sx. Teq." loc="26">Sx. Teq. 26</ref>; <foreign xml:lang="gez">ሐዋርያ፡ እስጢፋኖስ፡ ሊቀ፡ ዲያቆናት፡</foreign> <ref cRef="Sx. Ter" loc="1">Sx. Ter 1</ref>; et <foreign xml:lang="gez">ሐዋርያ፡</foreign> nonnumquam pro <foreign xml:lang="gez">ሐዋርያዊ፡</foreign> usurpatur, ut <foreign xml:lang="gez">ሰላም፡ ለከ፡ ፊላታዎስ፡ ሐዋርያ፤ ወሊቀ፡ ጳጳሳት፡ ዘለእስክንድርያ፤</foreign> <ref cRef="Sx. Hed." loc="12 ">Sx. Hed. 12 </ref>Enc.</sense> </sense>
               
            <sense xml:lang="en" source="#traces" xml:id="Tmain"> for <foreign xml:lang="gez">ጉባኤ፡ ሐዋርያት፡</foreign>, <foreign xml:lang="gez">ጉቡኣን፡ ሐዋርያት፡</foreign> <lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ጉባኤ፡</foreign> (TraCES) </sense>
