               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [amh. <foreign xml:lang="gez">ባለ፡</foreign> Isenb. grammar p. 136; sine dubio i.q. <foreign xml:lang="syr">ܡܰܠܶܠ</foreign> (cfr. <foreign xml:lang="gez">ብዕል፡</foreign> et <foreign xml:lang="ar">مَالٌ</foreign>); Arabice occurrit quidem <foreign xml:lang="ar">بَهَلَ</foreign> sed significat <cit type="translation" xml:lang="la"><quote> maledixit </quote></cit>, VIII <cit type="translation" xml:lang="la"><quote> supplex fuit </quote></cit> in oratione (<foreign xml:lang="gez">መሐለ፡ ማሕለለ፡</foreign>)]; Perf. nonnisi apud scriptores inferioris aevi usitatum est, <lbl expand="exempli gratia">ex. gr.</lbl> in Chrys. crebro, ut: <foreign xml:lang="gez">ብህለ፡ ካልአ፡</foreign> <cit type="translation" xml:lang="la"><quote> aliud quid dixit </quote></cit> Chrys.; <foreign xml:lang="gez">በከመ፡ ብህልከ፡</foreign> <cit type="translation" xml:lang="la"><quote> ut dixisti </quote></cit>, Chrys.; <foreign xml:lang="gez">ዘብህልዎ፡</foreign> <cit type="translation" xml:lang="la"><quote> quod ei dixerunt </quote></cit> <bibl><ptr target="bm:Ludolf1691Commentarius"/></bibl> p. 499; vice Perfecti frequentant (abjecto <foreign xml:lang="gez">ል፡</foreign>) <foreign xml:lang="gez">ይቤ፡ ትቤ፡ ትቤ፡ ትቤሊ፡ እቤ፡ ይቤሉ፡ ይቤላ፡ ትቤሉ፡ ትቤላ፡ ንቤ፡</foreign>; sed ante <gramGrp> <pos expand="pronomen suffixum">pron. suff.</pos> </gramGrp> <foreign xml:lang="gez">ል፡</foreign> abjectum resumitur: <foreign xml:lang="gez">ይቤለኒ፡ እቤሎ፡</foreign> caet. (<bibl><ptr target="bm:Dillmann1857Gramm"/>gramm.</bibl> § 92; <bibl><ptr target="bm:Dillmann1857Gramm"/>gramm.</bibl> § 152); <cb n="0483" xml:id="c0483"/> Imperf. <foreign xml:lang="gez">ይብል፡</foreign> (<foreign xml:lang="gez">ትብሊ፡</foreign>, <foreign xml:lang="gez">ይብሉ፡</foreign> caet.); <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይበል፡</foreign>, Imperat. <foreign xml:lang="gez">በል፡</foreign>, <gramGrp> <pos expand="infinitivus&#xA;                            verbalis">Infin. verb.</pos> </gramGrp> <foreign xml:lang="gez">ብሂል፡</foreign> (ut: <foreign xml:lang="gez">ከመዝ፡ ብሂሎ፡</foreign> <ref cRef="1 Esr." loc="3,23">1 Esr. 3,23</ref>; <ref cRef="4 Esr." loc="3,38">4 Esr. 3,38</ref>); <gramGrp> <pos expand="infinitivus nominalis,&#xA;                            nominascens">Infin. nom.</pos> </gramGrp> <foreign xml:lang="gez">ብሂል፡</foreign> (ut: <foreign xml:lang="gez">ብሂል፡ ይብሉ፡</foreign> <ref cRef="Jer." loc="38,23">Jer. 38,23</ref>; <ref cRef="4 Esr." loc="4,41">4 Esr. 4,41</ref>; <ref cRef="Matth." loc="3,9">Matth. 3,9</ref>, etiam in <lbl expand="pluralis">Pl.</lbl> <foreign xml:lang="gez">ብሂላት፡</foreign> <cit type="translation" xml:lang="la"><quote> verba </quote></cit> Lud.; <foreign xml:lang="gez">ብህሎ፡</foreign> (<ref cRef="Asc. Jes." loc="5,9">Asc. Jes. 5,9</ref>), <foreign xml:lang="gez">ብሂሎት፡</foreign> (ut: <foreign xml:lang="gez">ኢትክል፡ ብሂሎቶ፡</foreign> <ref cRef="Dan. apocr. " loc="13,24">Dan. apocr.  13,24</ref>; <ref cRef="Gen." loc="18,30">Gen. 18,30</ref>; <ref cRef="Ruth" loc="1,18">Ruth 1,18</ref>). <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> dicere </quote></cit>: <foreign xml:lang="gez">ውእቱ፡ ይቤ፡ ወኮኑ፡</foreign> <ref cRef="Ps." loc="32,9">Ps. 32,9</ref>; <foreign xml:lang="gez">ከመዝ፡ ይቤ፡ እግዚአብሔር፡</foreign> <ref cRef="Jes." loc="43,1">Jes. 43,1</ref>; <ref cRef="Jes." loc="49,5">Jes. 49,5</ref>; <ref cRef="Jer." loc="4,3">Jer. 4,3</ref>; <foreign xml:lang="gez">በል፡</foreign> <ref cRef="Jer. " loc="3,12">Jer.  3,12</ref>; <foreign xml:lang="gez">በሊ፡ እኅቱ፡ አነ፡</foreign> <ref cRef="Gen." loc="12,13">Gen. 12,13</ref>; <ref cRef="4 Esr." loc="3,40">4 Esr. 3,40</ref>; <ref cRef="4 Esr. " loc="10,26">4 Esr.  10,26</ref>; <foreign xml:lang="gez">እንዘ፡ ይብል፡</foreign> <cit type="translation" xml:lang="la"><quote> dicens </quote></cit> <ref cRef="Matth." loc="3,14">Matth. 3,14</ref>; <ref cRef="Matth. " loc="23,1">Matth.  23,1</ref>; <foreign xml:lang="gez">ርኢከኑ፡ ምንተ፡ ይትናገር፡ ዝንቱ፡ ሕዝብ፡ ለብሂል፡</foreign> <ref cRef="Jer." loc="40,24">Jer. 40,24</ref> <lbl expand="versio altera">vers. alt.</lbl>; plura exempla innumeris in locis obvia non est quod afferamus. C.c. <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> <lbl expand="persona">pers.</lbl> (<cit type="translation" xml:lang="la"><quote> alicui </quote></cit>), ut: <foreign xml:lang="gez">ይብለከ፡ ምንተ፡ ትቤ፡</foreign> <ref cRef="Sir. " loc="22,8">Sir.  22,8</ref>; <foreign xml:lang="gez">በለኒ፡ ኢትፍራህ፡</foreign> <ref cRef="Thren." loc="3,56">Thren. 3,56</ref>; <foreign xml:lang="gez">በሎሙ፡</foreign> <ref cRef="Hez." loc="14">Hez. 14</ref>; <ref cRef="Hez." loc="4">Hez. 4</ref>; <ref cRef="Matth." loc="3,7">Matth. 3,7</ref>; <ref cRef="Matth." loc="3,9">Matth. 3,9</ref>; <ref cRef="Matth. " loc="3,15">Matth.  3,15</ref>; <foreign xml:lang="gez">ሰላም፡ እብል፡ አርያኖስሃ፡ ቀሲስ፡</foreign> <ref cRef="Sx. Tachs." loc="15 ">Sx. Tachs. 15 </ref>Enc.; <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> rei: <foreign xml:lang="gez">ዘንተ፡ ብሂሎ፡ አርመመ፡</foreign> <ref cRef="Clem." loc="65">Clem. f. 65</ref>; <ref cRef="Tob. " loc="14,11">Tob.  14,11</ref>; <foreign xml:lang="gez">ለመንት፡ ትብለኒ፡ ዘንተ፡ ነገረ፡</foreign> <ref cRef="1 Reg." loc="9,21">1 Reg. 9,21</ref>; <ref cRef="Ex. " loc="22,28">Ex.  22,28</ref>. <sense n="a" xml:id="D1a"> Sequitur <sense n="α" xml:id="D1aα"> plerumque oratio directa, ut <ref cRef="Matth." loc="4,3">Matth. 4,3</ref>; <ref cRef="Matth." loc="4,4">Matth. 4,4</ref>; <ref cRef="Matth." loc="4,6">Matth. 4,6</ref>; <ref cRef="Matth." loc="4,7">Matth. 4,7</ref>; <foreign xml:lang="gez">ኢትበሎ፡ ብፁዕ፡</foreign> <foreign xml:lang="grc">μὴ μακάριζε αὐτόν</foreign> <ref cRef="Sir. " loc="11,28">Sir.  11,28</ref>; <foreign xml:lang="gez">እለ፡ ይብልዎ፡ ለሠናይ፡ እኩይ፡</foreign> (v. <foreign xml:lang="gez">እኩየ፡</foreign>) <ref cRef="Jes." loc="5,20">Jes. 5,20</ref>. 
</sense> <sense n="β" xml:id="D1aβ"> rarius oratio obliqua, <lbl expand="scilicet">sc.</lbl> <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> verbi, non tantum ubi quis dicit, se aliquid facere velle vel facturum esse, ut: <foreign xml:lang="gez">እንተ፡ ይቤ፡ ይግበር፡</foreign> <foreign xml:lang="grc">ἣν εἶπε ποιῆσαι</foreign> <ref cRef="Ex." loc="32,14">Ex. 32,14</ref>; <ref cRef="Judith" loc="16,4">Judith 16,4</ref>, sed etiam ubi quis dicit, aliquid esse:<foreign xml:lang="gez">መኑ፡ ይብልዎ፡ ይኩን፡ ሰብእ፡ ለወልደ፡ እጓለ፡ እመሕያው፡</foreign> <ref cRef="Matth." loc="16,13">Matth. 16,13</ref>. 
</sense> <sense n="γ" xml:id="D1aγ"> perraro <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> Infin.: <foreign xml:lang="gez">መኑ፡</foreign> (v. <foreign xml:lang="gez">መነ፡</foreign>) <foreign xml:lang="gez">ትብሉኒ፡ ከዊነ፡</foreign> <cit type="translation" xml:lang="la"><quote> quem me dicitis esse? </quote></cit> <ref cRef="Matth." loc="16,15">Matth. 16,15</ref>. 
</sense> 
</sense> <sense n="b" xml:id="D1b"> Hoc verbum in extrema oratione, quam quis dicit, collocare licet, ut: <foreign xml:lang="gez">እፎ፡ እንከ፡ ትሣሀለኒ፡ ትብሎ፡ ለእግዚአብሔር፡</foreign> <cit type="translation" xml:lang="la"><quote> quomodo igitur Deo </quote></cit> <cit type="translation" xml:lang="la"><quote> „ </quote></cit> <cit type="translation" xml:lang="la"><quote> propitius mihi esto </quote></cit> <cit type="translation" xml:lang="la"><quote> “ </quote></cit> <cit type="translation" xml:lang="la"><quote> dices? </quote></cit> <ref cRef="Sir." loc="28,">Sir. 28,</ref> 3; <ref cRef="Sir." loc="22,8">Sir. 22,8</ref>; <ref cRef="Jes." loc="58,9">Jes. 58,9</ref>; <ref cRef="1 Esr. " loc="4,7">1 Esr.  4,7</ref>; <ref cRef="1 Esr." loc="4,8">1 Esr. 4,8</ref>; <ref cRef="1 Esr." loc="4,9">1 Esr. 4,9</ref>; <ref cRef="Judith" loc="13,3">Judith 13,3</ref>; <ref cRef="Dan. apocr." loc="13,24">Dan. apocr. 13,24</ref>; <ref cRef="Rom." loc="9,7">Rom. 9,7</ref>; 1 <ref cRef="Cor." loc="10,8">Cor. 10,8</ref>; <ref cRef="1 Cor." loc="10,9">1 Cor. 10,9</ref>; <ref cRef="1 Cor." loc="10,10">1 Cor. 10,10</ref>; crebro in libris prophetarum (sicut <foreign xml:lang="he">נְאֻם יְהוָֹה</foreign>), ut <ref cRef="Jes." loc="48,22">Jes. 48,22</ref>; <ref cRef="Jes. " loc="58,6">Jes.  58,6</ref>. 
</sense> <sense n="c" xml:id="D1c"> Non de personis tantum praedicatur, sed etiam de libris et literis, et verbis, ubi Latini utuntur <cit type="translation" xml:lang="la"><quote> dictum </quote></cit> vel <cit type="translation" xml:lang="la"><quote> scriptum est </quote></cit> (<cit type="translation" xml:lang="la"><quote> in </quote></cit> libro, vel verba) <cit type="translation" xml:lang="la"><quote> haec sunt </quote></cit>: <foreign xml:lang="gez">ወይብል፡ መጽሐፉ፡ ላሕ፡ ወብካይ፡ ወወይሌ፡</foreign> <ref cRef="Hez." loc="2,10">Hez. 2,10</ref>; <foreign xml:lang="gez">ከመዝ፡ ትብል፡ መጽሐፉ፡</foreign> <ref cRef="2 Esr." loc="4,11">2 Esr. 4,11</ref>; <ref cRef="2 Esr." loc="16,6">2 Esr. 16,6</ref>; <foreign xml:lang="gez">ጽሑፍ፡ ዘይብል፡</foreign> <ref cRef="Luc." loc="4,1">Luc. 4,1</ref>; <ref cRef="Marc." loc="15,26">Marc. 15,26</ref>; 4 <ref cRef="Reg." loc="5,6">Reg. 5,6</ref>; <foreign xml:lang="gez">ከመዝ፡ ይብል፡ ቃለ፡ መጽሐፍ፡</foreign> <ref cRef="3 Reg. " loc="21">3 Reg.  21</ref>(20),9; <foreign xml:lang="gez">ኢታስምዖ፡ ቃለ፡ ዘይብል፡ ረሐቁ፡ እምኔየ፡ አላ፡ አስምዖ፡ ቃለ፡ ዘይብል፡ ኦገብር፡ ኄር፡ ወምእመን፡</foreign> <ref cRef="Genz." loc="80">Genz. f. 80</ref>; ita, ubi scriptura sacra allegatur: <foreign xml:lang="gez">ከማሁ፡ ይቤ፡ መጽሐፍ፡</foreign> <ref cRef="Rom." loc="9,33">Rom. 9,33</ref>; <ref cRef="Rom. " loc="11,26">Rom.  11,26</ref>; <ref cRef="Rom." loc="15,3">Rom. 15,3</ref>; <ref cRef="1 Cor." loc="10,7">1 Cor. 10,7</ref>; <ref cRef="Clem." loc="92">Clem. f. 92</ref>; <ref cRef="Clem." loc="94">Clem. f. 94</ref>; <foreign xml:lang="gez">በከመ፡ ይቤ፡ ወንጌል፡ ቅዱስ፡</foreign> <ref cRef="Sx. Sen." loc="24.">Sx. Sen. 24.</ref> 
</sense> <sense n="d" xml:id="D1d"> Memorabilis est usus Infinitivi <foreign xml:lang="gez">ብሂል፡</foreign>, ubicumque verba orationis vel singula vocabula aliis exponuntur: <foreign xml:lang="gez">እስመ፡ ብሂሎቱ፡ አመ፡ አብኦ፡ ለበኵሩ፡ ውስተ፡ ዓለም፡ዝብሂል፡ አመ፡ ኰነኖ፡ ውስተ፡ ዓለም፡ ብሂል፡</foreign> <ref cRef="Chrys. ho." loc="3">Chrys. ho. 3</ref>; <foreign xml:lang="gez">ኬፋ፡ ብሂል፡ በነገረ፡ዕብራዊያን፡ ኰኵሕ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> „Cephas“ dicere in lingua Hebraeorum </quote></cit> (est), <cit type="translation" xml:lang="la"><quote> „petra“ dicere </quote></cit> i.e. Cephas significat petram <ref cRef="Clem." loc="86">Clem. f. 86</ref>; <foreign xml:lang="gez">ተልሚድ፡ ዝውእቱ፡ ረድእ፡ ብሂል፡ ዘበትርጓሜሁ፡</foreign> <ref cRef="Clem." loc="152">Clem. f. 152</ref>; <foreign xml:lang="gez">እስመ፡ ጼዴቅ፡ ብሂል፡ ጽድቅ፡ ብሂል፡</foreign> <ref cRef="Chrys. ho." loc="12">Chrys. ho. 12</ref>; etiam: <foreign xml:lang="gez">ዘ፡</foreign> — <foreign xml:lang="gez">ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> quod — significat </quote></cit> <ref cRef="Gen." loc="19,37">Gen. 19,37</ref>; <foreign xml:lang="gez">ዝውእቱ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> id est </quote></cit> <ref cRef="Matth." loc="27,46">Matth. 27,46</ref>, vel <foreign xml:lang="gez">ዝብሂል፡</foreign> — <foreign xml:lang="gez">ውእቱ፡</foreign> <ref cRef="Sx. Haml." loc="7">Sx. Haml. 7</ref>; vel <foreign xml:lang="gez">ዝብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> hoc est </quote></cit> (<cit type="translation" xml:lang="la"><quote> sive </quote></cit>) <ref cRef="Chrys. ho." loc="8">Chrys. ho. 8</ref>; vel <foreign xml:lang="gez">ብሂል፡</foreign> nudum (postpositum), ut: <foreign xml:lang="gez">ሰመያ፡ አቤኔዜር፡ እብነ፡ ረድኤት፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> nominavit eam Abenezer i.e. lapidem auxilii </quote></cit> <ref cRef="1 Reg." loc="7,12">1 Reg. 7,12</ref>; <ref cRef="Marc." loc="3,17">Marc. 3,17</ref>; <ref cRef="Marc." loc="5,41">Marc. 5,41</ref>; <ref cRef="Hebr." loc="7,2">Hebr. 7,2</ref>. 
</sense> 
</sense> <sense n="2" xml:id="D2"> perraro: <cit type="translation" xml:lang="la"><quote> loqui </quote></cit>, <ref cRef="Jos." loc="22,7">Jos. 22,7</ref>; <foreign xml:lang="gez">ኢትብል፡ በትእምርታት፡</foreign> <cit type="translation" xml:lang="la"><quote> ne loquaris e signis </quote></cit> i.e. ne divines e prodigiis, Lud. e Syn. (<ref cRef="Can. Clem." loc="8">Can. Clem. 8</ref>). <cb n="0484" xml:id="c0484"/> 
</sense> <sense n="3" xml:id="D3"> <cit type="translation" xml:lang="la"><quote> dicere </quote></cit> i.e. <cit type="translation" xml:lang="la"><quote> appellare </quote></cit>, <cit type="translation" xml:lang="la"><quote> nominare </quote></cit>, <cit type="translation" xml:lang="la"><quote> vocare </quote></cit>, <lbl expand="cum">c.</lbl> <lbl expand="duplex">dupl.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <foreign xml:lang="gez">ወልደ፡ እግዚአብሔር፡ ይብል፡ ርእሶ፡</foreign> <ref cRef="Sap. " loc="2,13">Sap.  2,13</ref>; <ref cRef="Judith" loc="3,8">Judith 3,8</ref>; <ref cRef="1 Reg." loc="9,9">1 Reg. 9,9</ref>; <ref cRef="2 Reg." loc="20,21">2 Reg. 20,21</ref>; <ref cRef="Apoc." loc="2,2">Apoc. 2,2</ref>; <ref cRef="Apoc." loc="2,20">Apoc. 2,20</ref>; <foreign xml:lang="gez">ለኪ፡ ይደሉ፡ ብሂል፡ እምነ፡ ወብሂለ፡ እግዚእትነ፡</foreign> Org. 
</sense> <sense n="4" xml:id="D4"> <cit type="translation" xml:lang="la"><quote> jubere </quote></cit>, <lbl expand="sequens">seq.</lbl> <foreign xml:lang="gez">ከመ፡</foreign> <lbl expand="cum">c.</lbl> <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp>, ut: <foreign xml:lang="gez">ይቤለነ፡ ከመ፡ ንእስር፡ ኵሎ፡</foreign> <ref cRef="Kuf." loc="10">Kuf. 10</ref>; <ref cRef="1 Reg. " loc="19,1">1 Reg.  19,1</ref>; <ref cRef="2 Reg." loc="1,18">2 Reg. 1,18</ref>; <ref cRef="Matth." loc="4,3">Matth. 4,3</ref>, vel <lbl expand="sequens">seq.</lbl> <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp>, <ref cRef="4 Esr." loc="10,65">4 Esr. 10,65</ref>; <ref cRef="4 Esr." loc="10,67">4 Esr. 10,67</ref> <lbl expand="varia lectio">var.</lbl>; <ref cRef="Judith" loc="5,9">Judith 5,9</ref>; <ref cRef="Judith" loc="13,3">Judith 13,3</ref>; <ref cRef="Dan. apocr." loc="1,17">Dan. apocr. 1,17</ref>; <ref cRef="Hez." loc="33,8">Hez. 33,8</ref>. 
</sense> <sense n="5" xml:id="D5"> <sense n="a" xml:id="D5a"> <foreign xml:lang="gez">ኦሆ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> obtemperare </quote></cit>, <cit type="translation" xml:lang="la"><quote> annuere </quote></cit> <ref cRef="Sir." loc="13,9">Sir. 13,9</ref>; <ref cRef="Jac." loc="4,7">Jac. 4,7</ref>; <foreign xml:lang="gez">በእንተ፡ ኦሆ፡ ብሂሎቱ፡ ወትሕትናሁ፡</foreign> <cit type="translation" xml:lang="la"><quote> ob ejus obedientiam et submissionem </quote></cit> <ref cRef="Phlx. " loc="129 ">Phlx.  129 </ref>(<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ኦሆ፡</foreign>). 
</sense> <sense n="b" xml:id="D5b"> <foreign xml:lang="gez">እንብየ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> nolle </quote></cit>, <cit type="translation" xml:lang="la"><quote> abnuere </quote></cit>, <cit type="translation" xml:lang="la"><quote> recusare </quote></cit> <ref cRef="Jac." loc="4,7">Jac. 4,7</ref> (<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">እንብየ፡</foreign>). 
</sense> <sense n="c" xml:id="D5c"> <foreign xml:lang="gez">ጸጥ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> obmutescere </quote></cit>, <cit type="translation" xml:lang="la"><quote> silere </quote></cit> <ref cRef="Job" loc="33,31">Job 33,31</ref>; <ref cRef="4 Esr." loc="4,42">4 Esr. 4,42</ref> (<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ጸጥ፡</foreign>). 
</sense> <sense n="d" xml:id="D5d"> <foreign xml:lang="gez">ባሐ፡ ብሂል፡</foreign> <cit type="translation" xml:lang="la"><quote> ave dicere </quote></cit>, <cit type="translation" xml:lang="la"><quote> salvere jubere </quote></cit> <lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ባሐ፡</foreign>. 
</sense> 
</sense> <sense n="6" xml:id="D6">— Alias significationes non est, quod statuamus, quamquam latine nonnumquam vertere licet <sense n="a" xml:id="D6a"> <cit type="translation" xml:lang="la"><quote> respondere </quote></cit> ut <ref cRef="Matth." loc="4,10">Matth. 4,10</ref>; <ref cRef="Matth." loc="8,7">Matth. 8,7</ref>; <ref cRef="Matth." loc="14,17">Matth. 14,17</ref>. 
</sense> <sense n="b" xml:id="D6b"> <cit type="translation" xml:lang="la"><quote> interrogare </quote></cit> ut <ref cRef="Matth." loc="9,14">Matth. 9,14</ref>; <ref cRef="Matth." loc="15,1">Matth. 15,1</ref>. 
</sense> <sense n="c" xml:id="D6c"> <cit type="translation" xml:lang="la"><quote> contra dicere </quote></cit>, <cit type="translation" xml:lang="la"><quote> opponere </quote></cit> vel <cit type="translation" xml:lang="la"><quote> occurrere </quote></cit> verbis ut <ref cRef="Rom. " loc="10,18">Rom.  10,18</ref>. 
</sense> <sense n="d" xml:id="D6d"> <cit type="translation" xml:lang="la"><quote> putare </quote></cit>, <cit type="translation" xml:lang="la"><quote> opinari </quote></cit>, <cit type="translation" xml:lang="la"><quote> sibi videri </quote></cit>: <foreign xml:lang="gez">ዘይብል፡ ኢአበስኩ፡</foreign> <foreign xml:lang="grc">ὃς δοκεῖ μὴ ἁμαρτάνειν</foreign> <ref cRef="Prov." loc="28,23">Prov. 28,23</ref>; <foreign xml:lang="gez">ዘይብል፡ ርእሶ፡ ጠቢብ፡</foreign> (<lbl expand="videas">vid.</lbl> Nr. 3) <foreign xml:lang="grc">δόξαντα παρ' αὐτῷ σοφὸν εἶναι</foreign> <ref cRef="Prov." loc="26,12">Prov. 26,12</ref>. 
</sense> 
</sense> </sense>
               
