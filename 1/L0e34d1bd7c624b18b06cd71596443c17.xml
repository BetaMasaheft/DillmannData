               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> [amh. <foreign xml:lang="gez">ረከሰ፡</foreign>; contiguum est <foreign xml:lang="gez">ረስሐ፡</foreign>; <lbl expand="collatio, -is vel collectivum,&#xA;                            -e">coll.</lbl> <foreign xml:lang="ar">رِكْسٌ</foreign> et <foreign xml:lang="ar">رِجْسٌ</foreign> <cit type="translation" xml:lang="la"><quote> sordes </quote></cit> (et <cit type="translation" xml:lang="la"><quote> crimen </quote></cit>), <foreign xml:lang="ar">رِجْزٌ رُجْزٌ</foreign> <cit type="translation" xml:lang="la"><quote> sordes </quote></cit> (<cit type="translation" xml:lang="la"><quote> idololatria </quote></cit>, <cit type="translation" xml:lang="la"><quote> poena </quote></cit>), <foreign xml:lang="ar">نَجِسَ</foreign> <cit type="translation" xml:lang="la"><quote> impurus ac spurcus fuit </quote></cit>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይርኰስ፡</foreign>, rarius <foreign xml:lang="gez">ይርኵስ፡</foreign> (<lbl expand="videas">vid.</lbl> <ref cRef="Lev." loc="19,26">Lev. 19,26</ref> <lbl expand="annotatio">ann.</lbl>), <cit type="translation" xml:lang="la"><quote> immundum </quote></cit> vel <cit type="translation" xml:lang="la"><quote> impurum esse </quote></cit> vel <cit type="translation" xml:lang="la"><quote> fieri </quote></cit>, <cit type="translation" xml:lang="la"><quote> se polluere </quote></cit>, <cit type="translation" xml:lang="la"><quote> contaminari </quote></cit>, plerumque sensu levitico et ethico, <lbl expand="construitur cum">c.c.</lbl> <foreign xml:lang="gez">በ፡</foreign> rei, qua quis contaminatur <ref cRef="Lev." loc="5,3">Lev. 5,3</ref>; <ref cRef="Lev." loc="18,23">Lev. 18,23</ref>; <ref cRef="Lev." loc="18,24">Lev. 18,24</ref>; <ref cRef="Lev." loc="19,26">Lev. 19,26</ref>; <ref cRef="Lev." loc="21,1">Lev. 21,1</ref> <lbl expand="sequens">seq.</lbl>; <ref cRef="Num. " loc="6,7">Num.  6,7</ref>; <ref cRef="Num." loc="19,20">Num. 19,20</ref>; <ref cRef="Deut." loc="24,4">Deut. 24,4</ref>; <ref cRef="Hez." loc="14,11">Hez. 14,11</ref>; <ref cRef="Hez." loc="20,7">Hez. 20,7</ref>; <ref cRef="Hez." loc="20,30">Hez. 20,30</ref>; <ref cRef="Hez." loc="23,17">Hez. 23,17</ref>; <ref cRef="Jer." loc="2,23">Jer. 2,23</ref>; <ref cRef="Jer." loc="3,1">Jer. 3,1</ref>; <ref cRef="Jer." loc="23,11">Jer. 23,11</ref>; <ref cRef="Thren." loc="4,14">Thren. 4,14</ref>; <ref cRef="Hagg." loc="2,13">Hagg. 2,13</ref>; <ref cRef="Kuf." loc="4">Kuf. 4</ref>; <ref cRef="Joh." loc="18,28">Joh. 18,28</ref>; <ref cRef="1 Cor." loc="8,7">1 Cor. 8,7</ref>; <ref cRef="Rom. " loc="1,21">Rom.  1,21</ref>; <foreign xml:lang="gez">ዘኢይረኵስ፡</foreign> <foreign xml:lang="grc">ἀμίαντος</foreign> <ref cRef="1 Petr." loc="1,4">1 Petr. 1,4</ref>. <sense n="a" xml:id="Da"> <cit type="translation" xml:lang="la"><quote> profanari </quote></cit>: <foreign xml:lang="gez">መቅደስየ፡ ረኵሰ፡</foreign> <ref cRef="Hez." loc="25,3">Hez. 25,3</ref>; <ref cRef="4 Esr. " loc="10,31">4 Esr.  10,31</ref>. 
</sense> <sense n="b" xml:id="Db"> <cit type="translation" xml:lang="la"><quote> vitiari </quote></cit>: <foreign xml:lang="gez">ይረኵሳ፡ አንስት፡</foreign> <ref cRef="Zach." loc="14,2">Zach. 14,2</ref>. 
