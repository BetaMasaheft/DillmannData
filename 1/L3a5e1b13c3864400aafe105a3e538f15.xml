               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> (perraro <foreign xml:lang="gez">ቀረበ፡</foreign> <ref cRef="Dan." loc="3,27">Dan. 3,27</ref> <lbl expand="varia lectio">var.</lbl>; <ref cRef="3 Reg. " loc="2,7">3 Reg.  2,7</ref> <lbl expand="varia lectio">var.</lbl>) <subc>I,1</subc> [<foreign xml:lang="he">קָרֵב</foreign> <foreign xml:lang="syr">ܩܪܶܒ</foreign> <foreign xml:lang="ar">قَرِبَ قَرُبَ</foreign>] <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይቅረብ፡</foreign> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> appropinquare </quote></cit>, <cit type="translation" xml:lang="la"><quote> accedere </quote></cit>, <cit type="translation" xml:lang="la"><quote> propinquum esse </quote></cit>, <cit type="translation" xml:lang="la"><quote> prope abesse </quote></cit>: <foreign xml:lang="gez">ይቅረቡ፡</foreign> <foreign xml:lang="grc">ἐγγισάτωοσαν</foreign> <ref cRef="Jes." loc="45,21">Jes. 45,21</ref>; <foreign xml:lang="gez">ቅረብ፡</foreign> <ref cRef="Kuf." loc="26">Kuf. 26</ref>; <foreign xml:lang="gez">ቀሪቦቱ፡</foreign> <ref cRef="Asc. Jes." loc="3,21">Asc. Jes. 3,21</ref>; <ref cRef="Asc. Jes." loc="3,22">Asc. Jes. 3,22</ref>; <ref cRef="Gen." loc="18,23">Gen. 18,23</ref>; <ref cRef="Matth." loc="15,12">Matth. 15,12</ref>; <ref cRef="Matth." loc="26,17">Matth. 26,17</ref>; <foreign xml:lang="gez">ቅረብ፡ ዝየ፡</foreign> <ref cRef="Hen. " loc="15,1">Hen.  15,1</ref>; <lbl expand="construitur cum">c.c.</lbl> <foreign xml:lang="gez">ለ፡</foreign> <ref cRef="Prov." loc="10,14">Prov. 10,14</ref>; <ref cRef="Ex." loc="32,19">Ex. 32,19</ref>; <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">መንገለ፡</foreign> <ref cRef="Kuf." loc="8">Kuf. 8</ref>; <ref cRef="Kuf." loc="9">Kuf. 9</ref>; <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ኀበ፡</foreign> <ref cRef="Gen." loc="27,22">Gen. 27,22</ref>; <ref cRef="Gen." loc="37,18">Gen. 37,18</ref>; <ref cRef="Gen." loc="45,4">Gen. 45,4</ref>; <ref cRef="1 Reg." loc="10,24">1 Reg. 10,24</ref>; <foreign xml:lang="gez">ናሁ፡ አነ፡ ቀረብኩ፡ ኀበ፡ ፍትሕየ፡</foreign> <ref cRef="Job" loc="13,18">Job 13,18</ref>; <foreign xml:lang="gez">ሶበ፡ ቀርቡ፡ ኀበ፡ ራጌስ፡</foreign> <ref cRef="Tob." loc="6,10">Tob. 6,10</ref>; <ref cRef="Tob." loc="10,13">Tob. 10,13</ref>; <ref cRef="Asc. Jes." loc="9,39">Asc. Jes. 9,39</ref>; <ref cRef="Ps." loc="31,8">Ps. 31,8</ref>; <ref cRef="Asc. Jes." loc="90,7">Asc. Jes. 90,7</ref>; <ref cRef="Hen." loc="91,4">Hen. 91,4</ref>; <ref cRef="Matth." loc="18,1">Matth. 18,1</ref>; <ref cRef="Hebr." loc="4,16">Hebr. 4,16</ref>; <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <ref cRef="Gen." loc="27,21">Gen. 27,21</ref>; <ref cRef="Deut." loc="4,7">Deut. 4,7</ref>; <ref cRef="Prov." loc="3,15">Prov. 3,15</ref>; <foreign xml:lang="gez">ይቀርቡኒ፡ በከናፍሪሆሙ፡</foreign> <ref cRef="Jes." loc="29,13">Jes. 29,13</ref>; <ref cRef="4 Esr." loc="10,39">4 Esr. 10,39</ref>; <ref cRef="Jac." loc="4,8">Jac. 4,8</ref>; <foreign xml:lang="gez">ይሰቲ፡ እምነ፡ ኵሉ፡ ማይ፡ ዘቀርቦ፡</foreign> <ref cRef="Sir." loc="26,12">Sir. 26,12</ref>; <foreign xml:lang="gez">ኢቀርቦሙ፡</foreign> (v. <foreign xml:lang="gez">ኢቀረቦሙ፡</foreign>) <foreign xml:lang="gez">እሳት፡ ሥጋሆሙ፡</foreign> <ref cRef="Dan." loc="3,27">Dan. 3,27</ref>; <cit type="translation" xml:lang="la"><quote> se applicare </quote></cit>: <foreign xml:lang="gez">ቦ፡ ዐርከ፡ ዘይቀርበከ፡ አመ፡ ትፍሥሕትከ፡</foreign> <ref cRef="Sir." loc="37,4">Sir. 37,4</ref>. <sense n="a" xml:id="D1a"> de tempore: <sense n="α" xml:id="D1aα"> <cit type="translation" xml:lang="la"><quote> instare </quote></cit>: <foreign xml:lang="gez">ቀርበት፡ ዕለተ፡ እግዚአብሔር፡</foreign> <ref cRef="Jes." loc="13,6">Jes. 13,6</ref>; <foreign xml:lang="gez">ቀርበ፡ ጊዜነ፡</foreign> <ref cRef="Thren." loc="4,19">Thren. 4,19</ref>; <ref cRef="Zeph." loc="1,14">Zeph. 1,14</ref>; <ref cRef="1 Petr. " loc="4,7">1 Petr.  4,7</ref>; <ref cRef="Matth." loc="3,2">Matth. 3,2</ref>; <ref cRef="Joh." loc="2,13">Joh. 2,13</ref>; <foreign xml:lang="gez">ቀርበ፡ መዋዕሊሁ፡ ለመዊት፡</foreign> <ref cRef="Gen." loc="47,29">Gen. 47,29</ref>; <ref cRef="Hen." loc="51,2">Hen. 51,2</ref>. 
</sense> <sense n="β" xml:id="D1aβ"> <cit type="translation" xml:lang="la"><quote> brevem esse </quote></cit>, <cit type="translation" xml:lang="la"><quote> breviorem fieri </quote></cit> <ref cRef="Hen." loc="72,34">Hen. 72,34</ref> (<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ቅሩብ፡</foreign>). 
</sense> 
</sense> <sense n="b" xml:id="D1b"> de cognatione et affinitate: <ref cRef="Jud." loc="4,11">Jud. 4,11</ref>; <foreign xml:lang="gez">ይቀርብ፡ እምኔየ፡</foreign> <ref cRef="Ruth" loc="3,12">Ruth 3,12</ref>. 
</sense> <sense n="c" xml:id="D1c"> de similitudine: <foreign xml:lang="gez">ቀርበ፡ መዋዕልየ፡ ለመዋዕለ፡ ሕይወትኪ፡</foreign> <ref cRef="Kuf." loc="126.">Kuf. p. 126.</ref> 
</sense> <sense n="d" xml:id="D1d"> honesta de complexu venereo, plerumque <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <ref cRef="Ex." loc="19,15">Ex. 19,15</ref>; <ref cRef="Gen." loc="38,26">Gen. 38,26</ref>; <ref cRef="Kuf." loc="41">Kuf. 41</ref>; <ref cRef="Tob." loc="3,8">Tob. 3,8</ref>; <ref cRef="Rom." loc="7,3">Rom. 7,3</ref>; <ref cRef="1 Cor." loc="7,1">1 Cor. 7,1</ref>. 
</sense> 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> accedere ad altaris communionem </quote></cit>, <cit type="translation" xml:lang="la"><quote> communicare </quote></cit>: <foreign xml:lang="gez">እለ፡ ኢትቀርቡ፡ ፃኡ፡</foreign> <ref cRef="Lit." loc="164,1">Lit. 164,1</ref>; <ref cRef="Kid." loc="8">Kid. f. 8</ref>; <foreign xml:lang="gez">ይባእ፡ ወይትከነስ፡ ወይቅረብ፡</foreign> <ref cRef="Clem." loc="161">Clem. f. 161</ref>; <foreign xml:lang="gez">ይቅረቡ፡ ቍርባነ፡</foreign> <ref cRef="F.M." loc="5">F.M. 5</ref>,2; F.M. 14,1. 
</sense> </sense>
               
