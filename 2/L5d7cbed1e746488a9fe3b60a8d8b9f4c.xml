               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>III,1</subc> et <foreign xml:lang="gez">ተራሐቀ፡</foreign> <subc>III,3</subc> <cit type="translation" xml:lang="la"><quote> se removere </quote></cit>, <cit type="translation" xml:lang="la"><quote> abducere </quote></cit>, <cit type="translation" xml:lang="la"><quote> sejungere </quote></cit> ab alio vel a se invicem, <cit type="translation" xml:lang="la"><quote> discedere </quote></cit> ab alio vel a se invicem; <foreign xml:lang="gez">ተራሕቆ፡</foreign> <ref cRef="Koh." loc="3,5">Koh. 3,5</ref>; <ref cRef="1 Cor." loc="7,5">1 Cor. 7,5</ref> <lbl expand="romanae editionis">rom.</lbl>; <lbl expand="construitur cum">c.c.</lbl> <foreign xml:lang="gez">እምነ፡</foreign>, ut: <foreign xml:lang="gez">ኢይትራ</foreign>(<foreign xml:lang="gez">ረ</foreign>)<foreign xml:lang="gez">ሐቁ፡ ፩፩ እምካልኡ፡</foreign> <ref cRef="Joel" loc="2,8">Joel 2,8</ref>; <ref cRef="2 Esr." loc="14,19">2 Esr. 14,19</ref>; vel <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ምስለ፡</foreign>, ut <ref cRef="Gen." loc="31,49">Gen. 31,49</ref>; vel <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>, ut <ref cRef="Luc." loc="24,28">Luc. 24,28</ref>; <ref cRef="Luc. " loc="24,51">Luc.  24,51</ref>; <ref cRef="Marc." loc="6,48">Marc. 6,48</ref> <lbl expand="romanae editionis">rom.</lbl>; <foreign xml:lang="gez">ይትራ</foreign>(<foreign xml:lang="gez">ረ</foreign>)<foreign xml:lang="gez">ሐቁኪ፡ እለ፡ ኬድኪ፡</foreign> <ref cRef="Jes." loc="49,19">Jes. 49,19</ref>; <foreign xml:lang="gez">ተራሐቆሙ፡ ንስቲተ፡</foreign> <cit type="translation" xml:lang="la"><quote> paululum ab iis recessit </quote></cit> <ref cRef="Jsp." loc="360.">Jsp. p. 360.</ref> In specie: <sense n="a" xml:id="Da"> <cit type="translation" xml:lang="la"><quote> deficere </quote></cit>: <foreign xml:lang="gez">እለ፡ ትትረ</foreign>(<foreign xml:lang="gez">ራ</foreign>)<foreign xml:lang="gez">ሐቁ፡ እምነ፡ ጽድቅ፡</foreign> <ref cRef="Jes." loc="46,12">Jes. 46,12</ref>; <fo