               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> vel <foreign xml:lang="gez">ሐረጸ፡</foreign> (etiam per <foreign xml:lang="gez">ኀ</foreign>) <subc>I,1</subc> [i.q. <foreign xml:lang="he">עָרַס</foreign> (in <foreign xml:lang="he">עֲרִיסָה</foreign> <cit type="translation" xml:lang="la">
                            <quote> farina crassior </quote>
                        </cit>), <foreign xml:lang="he">הִגרִיס</foreign> <cit type="translation" xml:lang="la">
                            <quote> comminuit </quote>
                        </cit>, <foreign xml:lang="syr">ܓܪܺܝܣܳܐ</foreign> <foreign xml:lang="he">גְּרִיס</foreign> <cit type="translation" xml:lang="la">
                            <quote> comminutus </quote>
                        </cit>, <foreign xml:lang="ar">جَرَشَ</foreign> <cit type="translation" xml:lang="la">
