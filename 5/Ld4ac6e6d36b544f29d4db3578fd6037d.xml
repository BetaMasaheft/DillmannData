               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <gramGrp> <pos expand="Substantivum">subst.</pos> </gramGrp> [<foreign xml:lang="he">לֵב</foreign> et <foreign xml:lang="he">לֵבָב</foreign>, <foreign xml:lang="syr">ܠܶܒܳܐ</foreign>, <foreign xml:lang="ar">لُبٌّ</foreign> amh. <foreign xml:lang="gez">ልብ፡</foreign>; de etymo <lbl expand="videas">vid.</lbl> Ges. thes. p. 738] <gramGrp> <gen value="not found">m.</gen> </gramGrp> et <gramGrp> <gen value="femininus">fem.</gen> </gramGrp> (ut <ref cRef="Prov." loc="6,18">Prov. 6,18</ref>; <ref cRef="Prov." loc="15,13">Prov. 15,13</ref>; <ref cRef="Prov." loc="15,14">Prov. 15,14</ref>; <ref cRef="Prov." loc="17,22">Prov. 17,22</ref>; <ref cRef="Prov. " loc="26,23">Prov.  26,23</ref>; <ref cRef="Job" loc="36,34">Job 36,34</ref>; <ref cRef="Koh." loc="1,16">Koh. 1,16</ref>; <ref cRef="Koh." loc="2,23">Koh. 2,23</ref>; <ref cRef="Koh." loc="7,22">Koh. 7,22</ref>; <ref cRef="Koh." loc="8,17">Koh. 8,17</ref>; <ref cRef="Koh." loc="9,3">Koh. 9,3</ref>; <ref cRef="Jer." loc="18,12">Jer. 18,12</ref>) <lbl expand="pluralis">Pl.</lbl> <foreign xml:lang="gez">አልባብ፡</foreign> (ut <ref cRef="Matth." loc="9,4">Matth. 9,4</ref>) est <sense n="1" xml:id="D1"> sensu <cb n="0042" xml:id="c0042"/> physico <cit type="translation" xml:lang="la"><quote> cor </quote></cit> et hominum ut <ref cRef="Ps." loc="44,7">Ps. 44,7</ref>, et animalium ut <ref cRef="Job" loc="41,15">Job 41,15</ref>; <ref cRef="Tob." loc="6,5">Tob. 6,5</ref>; <ref cRef="Tob." loc="6,6">Tob. 6,6</ref>; <ref cRef="Tob." loc="6,7">Tob. 6,7</ref>; <ref cRef="Tob." loc="6,8">Tob. 6,8</ref>; inde <cit type="translation" xml:lang="la"><quote> medium rei </quote></cit> <foreign xml:lang="gez">ልበ፡ ባሕር፡</foreign> <ref cRef="Hez." loc="27,25">Hez. 27,25</ref>; <ref cRef="Hez." loc="28,8">Hez. 28,8</ref>; <ref cRef="Ps." loc="45,2">Ps. 45,2</ref>; <foreign xml:lang="gez">ልባ፡ ለምድር፡</foreign> <ref cRef="Matth." loc="12,40">Matth. 12,40</ref>; <foreign xml:lang="gez">ል