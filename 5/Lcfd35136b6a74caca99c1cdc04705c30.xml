               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>II,1</subc> Imperf. <foreign xml:lang="gez">ያሬኢ፡</foreign> (ut in quibusdam codicibus <ref cRef="4 Esr." loc="13,52">4 Esr. 13,52</ref>; <ref cRef="Koh." loc="2,24">Koh. 2,24</ref>) et plerumque <foreign xml:lang="gez">ያርኢ፡</foreign>, <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ያርኢ፡</foreign>, <cit type="translation" xml:lang="la"><quote> videre facere </quote></cit> i.e. <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> monstrare </quote></cit>, <cit type="translation" xml:lang="la"><quote> ostendere </quote></cit>: <lbl expand="cum">c.</lbl> <lbl expand="duplex">dupl.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <foreign xml:lang="gez">ያርእዩነ፡ ፍኖቶ፡</foreign> <ref cRef="Mich." loc="4,2">Mich. 4,2</ref>; <ref cRef="Gen." loc="12,1">Gen. 12,1</ref>; <ref cRef="Kuf." loc="4">Kuf. 4</ref>; <ref cRef="Jes." loc="39,2">Jes. 39,2</ref>; <ref cRef="Jes." loc="40,14">Jes. 40,14</ref>; <ref cRef="Jes." loc="48,17">Jes. 48,17</ref>; <ref cRef="Jes." loc="53,11">Jes. 53,11</ref>; <ref cRef="Judith" loc="13,15">Judith 13,15</ref>; <ref cRef="Hen." loc="1,2">Hen. 1,2</ref>; <foreign xml:lang="gez">አርአዮሙ፡ እኪተኒ፡ ወሠናይተኒ፡</foreign> <ref cRef="Sir." loc="17,7">Sir. 17,7</ref>; <ref cRef="Sir." loc="25,25">Sir. 25,25</ref>; <foreign xml:lang="gez">እለ፡ አርአዮሙ፡ ርእሶ፡ ሕያወ፡</foreign> <ref cRef="Act." loc="1,3">Act. 1,3</ref> Platt; <ref cRef="Joh." loc="14,8">Joh. 14,8</ref>; <ref cRef="Joh." loc="20,20">Joh. 20,20</ref>; <ref cRef="Matth." loc="4,8">Matth. 4,8</ref>; <ref cRef="Jac." loc="2,18">Jac. 2,18</ref>; <ref cRef="Apoc." loc="21,9">Apoc. 21,9</ref>; <ref cRef="Apoc." loc="21,10">Apoc. 21,10</ref>; vel <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> rei et <foreign xml:lang="gez">ለ፡</foreign> pers., ut <ref cRef="Hen. " loc="13,2">Hen.  13,2</ref>; <ref cRef="Hen." loc="69,1">Hen. 69,1</ref>; <ref cRef="Hen." loc="105,1">Hen. 105,1</ref>; <ref cRef="Lev." loc="13,49">Lev. 13,49</ref>; <ref cRef="Matth." loc="8,4">Matth. 8,4</ref>; vel <lbl expand="cum">c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> rei: <ref cRef="Jac." loc="3,13">Jac. 3,13</ref>; <foreign xml:lang="gez">ኣርኢ፡ ኀይልየ፡ ላዕሌከ፡</foreign> <ref cRef="Rom." loc="9,17">Rom. 9,17</ref>; <foreign xml:lang="gez">አርአየ፡ ኀይሎ፡ በውስተ፡ ብርሃን፡</foreign> <ref cRef="Job" loc="28,11">Job 28,11</ref>; <foreign xml:lang="gez">ይደግም፡ አርእዮ፡ እዴሁ፡</foreign> <ref cRef="Jes." loc="11,11">Jes. 11,11</ref>; <foreign xml:lang="gez">ያርኢ፡ ትእምርተ፡</foreign> <foreign xml:lang="grc">ἀρεῖ σημεῖον</foreign> <ref cRef="Jes. " loc="11,12">Jes.  11,12</ref>; <ref cRef="Jes." loc="30,30">Jes. 30,30</ref>; <foreign xml:lang="gez">እግዚአብሔር፡ ያርኢ፡ ገጾ፡ ላዕሌከ፡</foreign> <ref cRef="Num. " loc="6,26">Num.  6,26</ref>; <ref cRef="Ps." loc="66,1">Ps. 66,1</ref>; <ref cRef="Ps." loc="97,3">Ps. 97,3</ref>; vel <lbl expand="sequens">seq.</lbl> enuntiatione integra vel <gramGrp> <pos expand="conjunctio">conj.</pos> </gramGrp> <foreign xml:lang="gez">ከመ፡</foreign>, ut: <foreign xml:lang="gez">አርአየኒሁ፡ እግዚአብሔር፡ ለካህን፡ ዐቢይ፡ ይቀውም፡</foreign> <ref cRef="Zach." loc="3,1">Zach. 3,1</ref>; <ref cRef="Rom." loc="1,4">Rom. 1,4</ref>; <ref cRef="4 Reg." loc="8,10">4 Reg. 8,10</ref>. <sense n="a" xml:id="D1a"> <cit type="translation" xml:lang="la"><quote> visibilem reddere </quote></cit> <ref cRef="Hen." loc="89,3">Hen. 89,3</ref>. 
</sense> <sense n="b" xml:id="D1b"> <cit type="translation" xml:lang="la"><quote> visionem videre facere </quote></cit>: <foreign xml:lang="gez">ያርእየከ፡ እግዚአብሔር፡ ራእየ፡ በሕልም፡</foreign> <ref cRef="4 Esr." loc="10,73">4 Esr. 10,73</ref>; <ref cRef="Am." loc="7,4">Am. 7,4</ref>; <ref cRef="Am." loc="7,7">Am. 7,7</ref>. 
</sense> <sense n="c" xml:id="D1c"> <cit type="translation" xml:lang="la"><quote> manifestum facere </quote></cit>, <cit type="translation" xml:lang="la"><quote> revelare </quote></cit>: <foreign xml:lang="gez">አርአየት፡ ሠቀ፡</foreign> <foreign xml:lang="grc">ἐγύμνωσε σάκκον</foreign> <ref cRef="Judith" loc="9,1">Judith 9,1</ref>; <foreign xml:lang="gez">ነገር፡ ዘአርአይኩከ፡</foreign> <foreign xml:lang="grc">λόγοι οὓς ἐχρημάτισα πρὸς σέ</foreign> <ref cRef="Jer." loc="37,2">Jer. 37,2</ref>. 
</sense> <sense n="d" xml:id="D1d"> <cit type="translation" xml:lang="la"><quote> notum facere </quote></cit>, <cit type="translation" xml:lang="la"><quote> certiorem reddere </quote></cit>: <ref cRef="Gen." loc="2,9">Gen. 2,9</ref>; <foreign xml:lang="gez">አርእየኒ፡ ወኣእምር፡</foreign> <foreign xml:lang="grc">γνώρισόν μοι καὶ γνώσομαι</foreign> <ref cRef="Jer." loc="11,17">Jer. 11,17</ref>; etiam cum <foreign xml:lang="gez">በእንተ፡</foreign> rei <ref cRef="Hen. " loc="22,12">Hen.  22,12</ref>. 
</sense> <sense n="e" xml:id="D1e"> <cit type="translation" xml:lang="la"><quote> cum voluptate videre facere </quote></cit> aliquem aliquid, <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">በ፡</foreign> rei <ref cRef="Ps." loc="58,11">Ps. 58,11</ref>. 
</sense> <sense n="f" xml:id="D1f"> videre facere i.e. <cit type="translation" xml:lang="la"><quote> afficere </quote></cit> aliquem re (<cit type="translation" xml:lang="de"><quote> erzeigen </quote></cit>, <lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ርእየ፡</foreign> <ref cRef="Nr." loc="4,">Nr. 4,</ref>b) <lbl expand="cum">c.</lbl> <lbl expand="duplex">dupl.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp>: <foreign xml:lang="gez">ያሬእያ፡ ሠናየ፡ ለነፍሱ፡</foreign> <ref cRef="Koh." loc="2,24">Koh. 2,24</ref>; <ref cRef="Gen." loc="50,15">Gen. 50,15</ref>; <ref cRef="Gen." loc="50,17">Gen. 50,17</ref>; <ref cRef="Ps." loc="59,3">Ps. 59,3</ref>; <ref cRef="Ps." loc="70,22">Ps. 70,22</ref>; <ref cRef="Ps." loc="84,7">Ps. 84,7</ref>; <ref cRef="Ps." loc="90,16">Ps. 90,16</ref>. 
</sense> 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> lumen perfundere </quote></cit> (ut videre possis), <cit type="translation" xml:lang="la"><quote> lucere </quote></cit> (<cit type="translation" xml:lang="de"><quote> scheinen </quote></cit>): <foreign xml:lang="gez">ፀሓይ፡ ያበርህ፡ ወያርኢ፡ ላዕለ፡ ኵሉ፡</foreign> <ref cRef="Sir." loc="42,16">Sir. 42,16</ref>; <ref cRef="Joh." loc="1,5">Joh. 1,5</ref>; <ref cRef="Ex. " loc="25,37">Ex.  25,37</ref>. 
</sense> </sense>
               
