               <sense xml:id="Dmain" xml:lang="la" source="#dillmann">
                  <gramGrp>
                     <pos expand="Substantivum">subst.</pos>
                  </gramGrp>
                  <sense n="1" xml:id="D1">
                     <cit type="translation" xml:lang="la">
                        <quote> strepitus </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> tumultus </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> perturbatio </quote>
                     </cit>, <cb n="0010" xml:id="c0010"/>
                     <cit type="translation" xml:lang="la">
                        <quote> turba </quote>
                     </cit>: <foreign xml:lang="gez">ሀከከ፡ ቀትል፡</foreign>
                     <foreign xml:lang="grc">θόρυβος πολέμων</foreign>
                     <ref cRef="Jer." loc="30,2">Jer. 30,2</ref>; <foreign xml:lang="grc"
                        >θόρυβος</foreign>
                     <ref cRef="Prov. " loc="1,27">Prov. 1,27</ref>; <ref cRef="Prov." loc="23,29"
                        >Prov. 23,29</ref>; <foreign xml:lang="grc">πτόησις</foreign>
                     <ref cRef="Prov." loc="3,25">Prov. 3,25</ref>; <foreign xml:lang="gez">ሀከክ፡
                        ዘይከውን፡</foreign>
                     <foreign xml:lang="grc">τάραχος</foreign>
                     <ref cRef="Job" loc="24,17">Job 24,17</ref>; <foreign xml:lang="grc"
                        >ταραχή</foreign>
                     <ref cRef="Jer." loc="14,19">Jer. 14,19</ref>; <ref cRef="Hez. " loc="23,46"
                        >Hez. 23,46</ref>; <foreign xml:lang="gez">ዕለተ፡ ሀከክ፡</foreign>
                     <foreign xml:lang="grc">ἡμέρα ταραχῆς</foreign>
                     <ref cRef="Jes." loc="22,5">Jes. 22,5</ref>; <ref cRef="Kuf." loc="36">Kuf.
                        36</ref>; <foreign xml:lang="gez">ማየ፡ ሀከክ፡</foreign>
                     <foreign xml:lang="grc">τὸ ὕδωρ τὸ ἀνυπόστατον</foreign>
                     <ref cRef="Ps." loc="123,4">Ps. 123,4</ref>; <foreign xml:lang="gez">አኮ፡ በሀከክ፡
                        ወትዝልፍት፡</foreign>
                     <foreign xml:lang="grc">μηδὲν προπετὲς πράττειν</foreign> (<cit
                        type="translation" xml:lang="la">
                        <quote> temeritas praeceps
                        </quote>
                     </cit>) <ref cRef="Act. " loc="19,36">Act. 19,36</ref>; </sense>
                  <sense n="2" xml:id="D2">
                     <cit type="translation" xml:lang="la">
                        <quote> tumultus </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> turbae </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> seditio </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> rixae </quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote> discordiae </quote>
                     </cit>, quibus civitates, respublica, ecclesia, quaelibet hominum societas
                     perturbantur: <foreign xml:lang="grc">ταραχαὶ</foreign>
                     <ref cRef="Prov." loc="6,14">Prov. 6,14</ref>; <foreign xml:lang="grc"
                        >ἀκαταστασίαι</foreign>
                     <ref cRef="Prov." loc="26,28">Prov. 26,28</ref>; <foreign xml:lang="gez">እለ፡
                        ይገብሩ፡ ሀከከ፡</foreign>
                     <foreign xml:lang="grc">διχοστασίαν ποιοῦντες</foreign>
                     <ref cRef="Rom." loc="16,17">Rom. 16,17</ref>; <foreign xml:lang="grc"
                        >θόρυβος</foreign>
                     <ref cRef="Matth." loc="26,5">Matth. 26,5</ref>; <ref cRef="Act." loc="20,1"
                        >Act. 20,1</ref>; <foreign xml:lang="grc">στάσις</foreign> et <foreign
                        xml:lang="grc">συστροφή</foreign>
                     <ref cRef="Marc." loc="15,7">Marc. 15,7</ref>; <ref cRef="Act." loc="19,40"
                        >Act. 19,40</ref>; <foreign xml:lang="grc">σεισμοὶ</foreign>
                     <ref cRef="Matth. " loc="24,7">Matth. 24,7</ref>; <foreign xml:lang="gez">በሀከክ፡
                        ኀደርክሙ፡ ወበሀከክ፡ ይወድቁ፡ ደቂቅከ፡</foreign>
                     <cit type="translation" xml:lang="la">
                        <quote> seditione </quote>
                     </cit>
                     <ref cRef="Kuf." loc="10 ">Kuf. 10 </ref>et 23. – <cit type="translation"
                        xml:lang="la">
                        <quote> Voc. Ae. </quote>
                     </cit>: <foreign xml:lang="gez">ጋእዝ፡ ተስናን፡ ባእስ፡ ሀውክ፡ ሀከክ፡ ሒስ፡ ሰቈራር፡ ላኳ፡ ቅስት፡ ዘ፡
                        እሉ፡ ኵሎሙ፡ ጽልእ።</foreign>
                  </sense>
               </sense>

               <sense xml:id="Tmain" xml:lang="it" source="#traces">
                  <sense n="1" xml:id="T1">
                     <cit type="translation" xml:lang="it">
                        <quote> tumulto </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> strepito </quote>
                     </cit>
                  </sense>
                  <sense n="2" xml:id="T2">
                     <cit type="translation" xml:lang="it">
                        <quote> perturbazione </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> sedizione </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> discordia </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> spavento </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> rovina </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> baruffa </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> rissa </quote>
                     </cit>, <cit type="translation" xml:lang="it">
                        <quote> trambusto </quote>
                     </cit>
                  </sense>
                  <bibl><ptr target="bm:daMag1953"/></bibl>
               </sense>
               <sense xml:id="TGmain" xml:lang="en" source="#traces">
                  <cit type="transcription" xml:lang="gez">
                     <quote>hakak</quote>
                  </cit>, <lbl expand="pluralis">Pl.</lbl>
                  <cit type="transcription" xml:lang="gez">
                     <quote>hakakāt</quote>
                  </cit>
                  <sense n="G" xml:id="TG">
                     <foreign xml:lang="gez">ሀከክ፡</foreign>, <lbl expand="pluralis">Pl.</lbl>
                     <foreign xml:lang="gez">ሀከካት፡</foreign>
                     <sense n="1" xml:id="TG1"> «<cit type="translation" xml:lang="fr">
                           <quote>émeute</quote>
                        </cit>, <cit type="translation" xml:lang="fr">
                           <quote>tumulte</quote>
                        </cit>, <cit type="translation" xml:lang="fr">
                           <quote>dispute</quote>
                        </cit>, <cit type="translation" xml:lang="fr">
                           <quote>trouble</quote>
                        </cit>» ― <foreign xml:lang="am">ሞገድ፡</foreign>, <foreign xml:lang="am"
                           >ክርክር፡</foreign>
                        <ref type="BM" target="BNFabb217">BNFabb217</ref>, fol. 9v. </sense>
                     <sense n="2" xml:id="TG2"> (sens collectif) <cit type="translation"
                           xml:lang="fr">
                           <quote>désordres</quote>
                        </cit>, <cit type="translation" xml:lang="fr">
                           <quote>dissensions</quote>
                        </cit>, <cit type="translation" xml:lang="fr">
                           <quote>collisions</quote>
                        </cit>. <lb/>
                        <foreign xml:lang="gez">ሀከክ፡ ዘኮነ፡ በሀገረ፡ ቍስጥንጥንያ፡ በእንተ፡ ሥጋ፡ ንጹሕ፡ ዘእግዚእነ፡
                           ወመድኀኒነ፡ ኢየሱስ፡ ክርስቶስ።</foreign>
                        <bibl><ptr target="bm:Zotenberg1883JohnNikiu"/><citedRange unit="page">
                              143</citedRange></bibl>; <foreign xml:lang="gez">በእንተ፡ ሀከክ፡ ዘገብሩ፡ ላዕለ፡
                           ፎቃ፡ በግብጽ።</foreign>
                        <bibl><ptr target="bm:Zotenberg1883JohnNikiu"/><citedRange unit="page">
                              144</citedRange></bibl>. </sense>
                     <sense n="3" xml:id="TG3">
                        <cit type="translation" xml:lang="fr">
                           <quote>persécution
                              religiouse</quote>
                        </cit> (les dix grandes persécutions ordonnées par les empereurs romains
                        contre les premiers chrétiens). <lb/>
                        <foreign xml:lang="gez">አንሥአ፡ [ዱማድዮስ፡] ሀከከ፡ ላዕለ፡ ክርስቲያን፡ ወአውረደ፡ ላዕሌሆሙ፡
                           ኵነኔያት፡ ብዙኃተ፡ በእደ፡ ዳክዮስ፡ ወበእንተ፡ ምክረ፡ መኳንንቲሁ።</foreign>
                        <bibl><ptr target="bm:Zotenberg1883JohnNikiu"/><citedRange unit="page">
                              184</citedRange></bibl>; <foreign xml:lang="gez">አዘዘ፡ [ፈርንስጣ፡] ከመ፡
                           ኢይግበሩ፡ ቦሙ፡ ሀከከ፡ ወኢያስተናሥኡ፡ ላዕሌሆሙ፡ ስደተ፡ ወኢይበርብሩ፡ ንዋዮሙ፡ ወኢያሕምምዎሙ፡ ምንተኒ። ወዓዲ፡
                           አዘዘ፡ ከመ፡ ኢይክልእዎሙ፡ ተቀንዮቶሙ፡ ውስተ፡ ቤተ፡ ክርስቲያን፡ ቅድስት፡ ከመ፡ ይጸልዩ፡ በእንቲአሁ፡ ወበእንተ፡
                           መንግሥቱ።</foreign>
                        <bibl><ptr target="bm:Zotenberg1883JohnNikiu"/><citedRange unit="page"
                              >190</citedRange></bibl>. </sense>
                     <bibl><ptr target="bm:Grebaut1952SuppLexicon"/><citedRange unit="page">
