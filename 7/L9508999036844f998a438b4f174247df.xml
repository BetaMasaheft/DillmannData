               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <gramGrp> <pos expand="Substantivum">subst.</pos> </gramGrp> [i.q. <foreign xml:lang="he">לָשׁוֹן</foreign>, <foreign xml:lang="syr">ܠܶܫܳܢ</foreign>, <foreign xml:lang="he">לִשָּׁן</foreign>, <foreign xml:lang="ar">لِسِانٌ</foreign>; de etymo <lbl expand="videas">vid.</lbl> Ges. thes. p. 762] <gramGrp> <gen value="not found">m.</gen> </gramGrp> et <gramGrp> <gen value="femininus">fem.</gen> </gramGrp> (ex. gr. <ref cRef="Jac." loc="3,5">Jac. 3,5</ref>; <ref cRef="Sir." loc="28,15">Sir. 28,15</ref>; <ref cRef="Sir." loc="28,19">Sir. 28,19</ref>; <ref cRef="Sir." loc="28,26">Sir. 28,26</ref>; <ref cRef="Ps." loc="11,3">Ps. 11,3</ref>) <lbl expand="pluralis">Pl.</lbl> <foreign xml:lang="gez">ልሳናት፡</foreign> (<ref cRef="Rom." loc="3,13">Rom. 3,13</ref>; <ref cRef="Ps." loc="5,11">Ps. 5,11</ref>; <ref cRef="Hen." loc="71,5">Hen. 71,5</ref>) <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> lingua </quote></cit> (membrum corporis) <foreign xml:lang="gez">ነበበ፡ ልሳንየ፡</foreign> <ref cRef="Job " loc="33,2">Job  33,2</ref>; <foreign xml:lang="gez">ይረትዕ፡ ልሳነ፡ በሃም፡</foreign> <ref cRef="Jes." loc="35,6">Jes. 35,6</ref>; <foreign xml:lang="gez">ምቱረ፡ ልሳን፡</foreign> <foreign xml:lang="grc">γλωσσότμητος</foreign> <ref cRef="Lev." loc="22,22">Lev. 22,22</ref>; <foreign xml:lang="gez">ልሳን፡ ድክምት፡</foreign> <ref cRef="Prov." loc="25,15">Prov. 25,15</ref>; <foreign xml:lang="gez">ልሳን፡ ሐሳዊት፡</foreign> <ref cRef="Prov." loc="26,28">Prov. 26,28</ref>; <foreign xml:lang="gez">ልሳን፡ ዐማፂ፡</foreign> <ref cRef="Sir." loc="40,21">Sir. 40,21</ref>; <ref cRef="Sir." loc="6,5">Sir. 6,5</ref>; <foreign xml:lang="gez">ኵሉ፡ ልሳን፡ ይገኒ፡ ለእግዚአብሔር፡</foreign> <ref cRef="Jes." loc="45,23">Jes. 45,23</ref>; <ref cRef="Jer." loc="9,3">Jer. 9,3</ref>; <ref cRef="Jer." loc="9,5">Jer. 9,5</ref>; <ref cRef="Jes." loc="28,11">Jes. 28,11</ref>; <ref cRef="Jes." loc="59,3">Jes. 59,3</ref>; <foreign xml:lang="gez">ዘክልኤቱ፡ ልሳኑ፡</foreign> <foreign xml:lang="grc">δίγλωσσος</foreign> <ref cRef="Hez." loc="3,6">Hez. 3,6</ref>; <foreign xml:lang="gez">ዐቂበ፡ ልሳን፡</foreign> <cit type="translation" xml:lang="la"><quote> linguam continere </quote></cit> Fal.; <foreign xml:lang="gez">በካልእ፡ ልሳን፡ ይትናገሩ፡ ሐዲስ፡</foreign> <foreign xml:lang="grc">γλώσσαις λαλεῖν</foreign> <ref cRef="Marc. " loc="16,17">Marc.  16,17</ref>; <foreign xml:lang="gez">ልሳነ፡ ዕፍረት፡</foreign> quasi <foreign xml:lang="grc">μυρόγλωσσος</foreign> (<foreign xml:lang="grc">ἡδύγλωσσος</foreign>) est epitheton <ref cRef="Pauli Apostoli Sx. Teq." loc="13 ">Pauli Apostoli Sx. Teq. 13 </ref>Enc.; Chrys.; Herm. in subscrpt.; <foreign xml:lang="gez">ልሳነ፡ ወርቅ፡</foreign> (i.q. <foreign xml:lang="gez">አፈ፡ ወርቅ፡</foreign>) Joannes <cit type="translation" xml:lang="la"><quote> Chrysostomus </quote></cit> F.M. 2,9; {<ref target="#c1426"/> <ref cRef="Sx. Genb. " loc="12">Sx. Genb.  12</ref>}. 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> sermo </quote></cit>, <cit type="translation" xml:lang="la"><quote> lingua </quote></cit>: <foreign xml:lang="gez">ሕዝብ፡ ዘኢታአምር፡ ልሳኖ፡</foreign> <ref cRef="Jer." loc="5,15">Jer. 5,15</ref>; <ref cRef="Kuf." loc="3 ">Kuf. 3 </ref>et <ref cRef="Kuf." loc="10">Kuf. 10</ref>; <foreign xml:lang="gez">እምልሳነ፡ ዐረቢ፡</foreign> <cit type="translation" xml:lang="la"><quote> e sermone arabico </quote></cit> <ref cRef="Chrys." loc="150">Chrys. f. 150</ref>; <cit type="translation" xml:lang="la"><quote> sunt gentium </quote></cit> <foreign xml:lang="gez">፸ወ፪ ልሳናት፤ ዘሴም፡ ፲ወ፯፤ ዘካም፡ ፴፤ ዘያፌት፡ ፳ወ፭</foreign> <cit type="translation" xml:lang="la"><quote> Voc. Ae. </quote></cit> 
</sense> <sense n="3" xml:id="D3"> transfertur ad <sense n="a" xml:id="D3a"> <cit type="translation" xml:lang="la"><quote> sinum maris </quote></cit> et <cit type="translation" xml:lang="la"><quote> linguam </quote></cit> (terrae) vel <cit type="translation" xml:lang="la"><quote> isthmum </quote></cit>: <foreign xml:lang="gez">ልሳነ፡ ባሕረ፡ ግብጽ፡</foreign> <ref cRef="Jes." loc="11,15">Jes. 11,15</ref> (var.); <ref cRef="Kuf." loc="8">Kuf. 8</ref>; <foreign xml:lang="gez">ልሳነ፡ ባሕር፡ እንተ፡ ትኔጽር፡ መንገለ፡ ግብጽ፡</foreign> <ref cRef="Kuf." loc="9">Kuf. 9</ref>; deinde de linguis et paeninsulis saepius in <ref cRef="Kuf." loc="8 ">Kuf. 8 </ref>et 9. 
</sense> <sense n="b" xml:id="D3b"> <cit type="translation" xml:lang="la"><quote> linguam ignis </quote></cit> i.e. <cit type="translation" xml:lang="la"><quote> flammam </quote></cit>: <foreign xml:lang="gez">ልሳነ፡ እሳት፡</foreign> <ref cRef="Jes." loc="5,24">Jes. 5,24</ref> (var.); <ref cRef="Hen." loc="14,9">Hen. 14,9</ref>; <ref cRef="Hen." loc="14,10">Hen. 14,10</ref>; <ref cRef="Hen." loc="14,15">Hen. 14,15</ref>; <ref cRef="Hen." loc="71,5">Hen. 71,5</ref>; <ref cRef="Gad. T.H." loc="">Gad. T.H. </ref> 
</sense> <sense n="c" xml:id="D3c"> <cit type="translation" xml:lang="la"><quote> ligulam auri </quote></cit>: <foreign xml:lang="gez">ልሳን፡ እንተ፡ ወርቅ፡</foreign> (ex hebr. <foreign xml:lang="he">לְשׁוֹן זָהָב</foreign>) <ref cRef="Jos." loc="7,21">Jos. 7,21</ref>; <ref cRef="Jos. " loc="7,24">Jos.  7,24</ref>. 
</sense> <sense n="d" xml:id="D3d"> <cit type="translation" xml:lang="la"><quote> examen librae </quote></cit>: <foreign xml:lang="gez">ከመ፡ ልሳነ፡ ለጽሊጸ፡ መዳልው፡</foreign> <foreign xml:lang="grc">ὡς ῥοπὴ ἐκ πλαστίγγων</foreign> <ref cRef="Sap. " loc="11,23">Sap.  11,23</ref>. – Vox <foreign xml:lang="gez">ልሳን፡</foreign>, cum in dialecto amh. rarius usurpetur, in <cit type="translation" xml:lang="la"><quote> Voc. Ae. </quote></cit> explicatur: <foreign xml:lang="gez">ልሳን፡ ዘ፡ መላስ፡</foreign> (a <foreign xml:lang="gez">ላሰ፡</foreign>, aeth. <foreign xml:lang="gez">ለሐሰ፡</foreign>). 
</sense> 
</sense> </sense>
               
            <sense xml:id="Tmain" xml:lang="en" source="#traces"> <cit type="transcription" xml:lang="gez"><quote>lǝssān</quote></cit> <sense n="X" xml:id="TX"> <foreign xml:lang="gez">ልሳነ፡ ዕፍረት፡</foreign> <cit type="transcription" xml:lang="gez"><quote> lǝssāna ʿǝfrat </quote></cit> ‘<cit type="translation" xml:lang="it"><quote> lingua profumata </quote></cit>’ <foreign xml:lang="gez">ዝንቱ፡ አቡነ፡ ሊባኖስ፡ መና&lt;ኔ&gt;፡ መርዓ፡ ወንግሥ፡ ኰኵሐ፡ ሃይማኖት፡ ከመ፡ ጲጥሮስ፡ ልሳነ፡ ዕፍረት፡ ከመ፡ ጳውሎስ፡</foreign> ‘<cit type="translation" xml:lang="it"><quote> Questo Padre nostro Libānos — ripudiatore delle nozze e del regno, pietra della fede come Pietro, lingua profumata come Paolo </quote></cit>’ <bibl><ptr target="bm:Bausi2003Libanos"/><citedRange unit="page"> 6 § 11 (ed.)</citedRange></bibl>, <bibl><ptr target="bm:Bausi2003LibanosTr"/><citedRange unit="page"> 5 § 11 (tr.)</citedRange></bibl> (‘<cit type="transcription" xml:lang="gez"><quote> lǝssāna ʿǝfrǝt </quote></cit> è epiteto tradizionale di Paolo, vd. <bibl><ptr target="bm:Dillmann1865Lexicon"/><citedRange unit="page"> 1028</citedRange></bibl>.’ <bibl><ptr target="bm:Bausi2003LibanosTr"/><citedRange unit="page"> 5 n. 23</citedRange></bibl> ), <lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ዕፍረት፡</foreign> 
