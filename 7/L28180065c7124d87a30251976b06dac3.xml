               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>II,1</subc> <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><quote> erigere </quote></cit>, <cit type="translation" xml:lang="la"><quote> stabilire </quote></cit>: <foreign xml:lang="gez">አርትዐ፡ እገሪሁ፡</foreign> <cb n="0290" xml:id="c0290"/> (sc. Adamus, postquam creatus est) <ref cRef="Clem." loc="4">Clem. f. 4</ref>; <foreign xml:lang="gez">ኣርትዕ፡ መንበረ፡ መንግሥቱ፡</foreign> <ref cRef="1 Par." loc="22,10">1 Par. 22,10</ref>; <foreign xml:lang="gez">እግዚአብሔር፡ አርትዐ፡ ዓለመ፡ በጥበቡ፡</foreign> <ref cRef="Jer." loc="10,12">Jer. 10,12</ref>; <ref cRef="Jer. " loc="40,2">Jer.  40,2</ref>. 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><quote> rectum facere </quote></cit>, <cit type="translation" xml:lang="la"><quote> dirigere </quote></cit>, <cit type="translation" xml:lang="la"><quote> ad rectum revocare </quote></cit>: <foreign xml:lang="gez">አርትዕ፡ ኵሎ፡ ጠዋየ፡</foreign> <ref cRef="Jes." loc="58,6">Jes. 58,6</ref>; <ref cRef="Hebr." loc="12,12">Hebr. 12,12</ref>; <foreign xml:lang="gez">ያረትዕ፡ ሎቱ፡ ምክረ፡ ወጥበበ፡</foreign> <ref cRef="Sir." loc="39,7">Sir. 39,7</ref>; <ref cRef="2 Thess." loc="3,5">2 Thess. 3,5</ref>; saepissime de via: <ref cRef="Ps." loc="5,9">Ps. 5,9</ref>; <ref cRef="Sir." loc="2,6">Sir. 2,6</ref>; <foreign xml:lang="gez">ለእመ፡ አርታዕክሙ፡ ፍናዊክሙ፡ ርቱዐ፡</foreign> <ref cRef="Jer." loc="7,5">Jer. 7,5</ref>; <foreign xml:lang="gez">አርትዑ፡ ፍናዊክሙ፡ ወምግባሪክሙ፡</foreign> <ref cRef="Jer." loc="7,3">Jer. 7,3</ref>; <ref cRef="Prov." loc="11,5">Prov. 11,5</ref>; <foreign xml:lang="gez">እመ፡ አርታዕከ፡ ፍናዊከ፡</foreign> <ref cRef="Job" loc="22,3">Job 22,3</ref>; <ref cRef="Luc." loc="1,79">Luc. 1,79</ref>; <ref cRef="1 Thess." loc="3,11">1 Thess. 3,11</ref>; viam alicujus r. f. vel <cit type="translation" xml:lang="la"><quote> ei successum dare </quote></cit> <ref cRef="Kuf." loc="12">Kuf. 12</ref>; <ref cRef="Sir." loc="37,15">Sir. 37,15</ref>. <sense n="a" xml:id="D2a"> <cit type="translation" xml:lang="la"><quote> recta via tendere </quote></cit>, sive <lbl expand="sequens">seq.</lbl> <foreign xml:lang="gez">ሐዊረ፡</foreign> 1 <ref cRef="Reg." loc="6,12">Reg. 6,12</ref>; <ref cRef="Kuf." loc="21">Kuf. 21</ref>; sive absolute, ut: <foreign xml:lang="gez">አርቲዖ፡ የሐውር፡</foreign> <ref cRef="Prov." loc="15,21">Prov. 15,21</ref>; <ref cRef="Ps." loc="118,128">Ps. 118,128</ref>. 
</sense> <sense n="b" xml:id="D2b"> <cit type="translation" xml:lang="la"><quote> prospere agere </quote></cit>, <cit type="translation" xml:lang="la"><quote> successum habere </quote></cit> <ref cRef="Dan." loc="8,24">Dan. 8,24</ref>; <ref cRef="Dan." loc="11,27">Dan. 11,27</ref>; <ref cRef="Ps." loc="100,9">Ps. 100,9</ref>; <ref cRef="Ps." loc="139,12">Ps. 139,12</ref>. 
</sense> <sense n="3" xml:id="D23"> sensu ethico: <cit type="translation" xml:lang="la"><quote> rectum </quote></cit>, <cit type="translation" xml:lang="la"><quote> justum </quote></cit>, <cit type="translation" xml:lang="la"><quote> probum </quote></cit>, <cit type="translation" xml:lang="la"><quote> sincerum facere </quote></cit>: <foreign xml:lang="gez">አርትዖ፡ ፍትሕ፡</foreign> <ref cRef="Prov." loc="1,3">Prov. 1,3</ref>; <foreign xml:lang="gez">አርትዕ፡ ልበከ፡</foreign> <ref cRef="Sir." loc="2,2">Sir. 2,2</ref>; <foreign xml:lang="gez">አርታዕኩ፡ ነፍስየ፡</foreign> <ref cRef="Sir." loc="51,20">Sir. 51,20</ref>; <foreign xml:lang="gez">አርትዕ፡ እዴከ፡</foreign> <ref cRef="Sir." loc="38,10">Sir. 38,10</ref>, vel <cit type="translation" xml:lang="la"><quote> corrigere </quote></cit>, <cit type="translation" xml:lang="la"><quote> emendare </quote></cit>, ut: <foreign xml:lang="gez">አርትዖ፡ ጸዋግ፡ ልብ፡</foreign> <ref cRef="Clem." loc="182">Clem. f. 182</ref>; vel <cit type="translation" xml:lang="la"><quote> recte agere </quote></cit>, <cit type="translation" xml:lang="la"><quote> honeste facere </quote></cit>: <foreign xml:lang="gez">ከመ፡ ታርትዕ፡ በኵሉ፡ ግብርከ፡</foreign> <ref cRef="Kuf." loc="21">Kuf. 21</ref>; <ref cRef="Mich." loc="7,2">Mich. 7,2</ref>. 
</sense> <sense n="4" xml:id="D24"> <cit type="translation" xml:lang="la"><quote> verum dicere </quote></cit>, ut: <foreign xml:lang="gez">አርታዕከ፡ ነገረ፡</foreign> <foreign xml:lang="grc">ἄριστα ἔφης</foreign> Cyr. c. <ref cRef="Pall." loc="96">Pall. f. 96</ref>; vel <cit type="translation" xml:lang="la"><quote> verum aliquem dixisse declarare </quote></cit>: <foreign xml:lang="gez">እመ፡ ነበበ፡ ቃሎ፡ ያረትዑ፡ ሎቱ፡</foreign> <ref cRef="Sir." loc="13,22">Sir. 13,22</ref>; vel <cit type="translation" xml:lang="la"><quote> justum declarare </quote></cit> aliquem, sensu forensi, <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ለ፡</foreign> pers. <ref cRef="Deut." loc="25,1">Deut. 25,1</ref>; vel <cit type="translation" xml:lang="la"><quote> verificare ratum facere </quote></cit> aliquid <ref cRef="2 Reg." loc="7,24">2 Reg. 7,24</ref>. 
</sense> <sense n="5" xml:id="D25"> <cit type="translation" xml:lang="la"><quote> recte componere </quote></cit>, <cit type="translation" xml:lang="la"><quote> ordinare </quote></cit>, ut: ecclesiam, Syn. 
</sense> 
</sense> </sense>
               
