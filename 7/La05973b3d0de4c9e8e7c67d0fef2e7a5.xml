 <bibl><ptr target="bm:Grebaut1952SuppLexicon"/><citedRange unit="page"> 62</citedRange></bibl> 
</sense> <sense n="L" xml:id="TL"> <foreign xml:lang="gez">ሕይወት</foreign> <cit type="transcription" xml:lang="gez"><quote>ḥǝywat</quote></cit>, <foreign xml:lang="gez">ሒወት</foreign> <cit type="transcription" xml:lang="gez"><quote>ḥiwat</quote></cit> <cit type="translation" xml:lang="en"><quote>life</quote></cit>, <cit type="translation" xml:lang="en"><quote>lifetime</quote></cit>, <cit type="translation" xml:lang="en"><quote>healing</quote></cit>, <cit type="translation" xml:lang="en"><quote>good health</quote></cit>, <cit type="translation" xml:lang="en"><quote>salvation</quote></cit>, <cit type="translation" xml:lang="en"><quote>restoration</quote></cit>, <cit type="translation" xml:lang="en"><quote>state</quote></cit>, <cit type="translation" xml:lang="en"><quote>situation</quote></cit> <lb/>
