               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> (raro <foreign xml:lang="gez">ንበብ፡</foreign>
                  ut <ref cRef="Matth." loc="10,14">Matth. 10,14</ref>
                  <lbl expand="romanae editionis">rom.</lbl>; Lud.), <gramGrp>
                     <pos expand="Substantivum">subst.</pos>
                  </gramGrp>, <cb n="0657" xml:id="c0657"/> plerumque <gramGrp>
                     <gen value="masculinum">m.</gen>
                  </gramGrp>, <cit type="translation" xml:lang="la">
                     <quote>loquela</quote>
                  </cit>, <cit type="translation" xml:lang="la">
                     <quote>sermo</quote>
                  </cit>: <foreign xml:lang="gez">ንባበ፡ አፉሆሙ፡</foreign>
                  <ref cRef="Kuf." loc="23">Kuf. 23</ref>; <ref cRef="Prov." loc="4,4">Prov.
                     4,4</ref>; <ref cRef="Prov." loc="4,20">Prov. 4,20</ref> (<foreign xml:lang="grc">ῥῆσις</foreign>); <foreign xml:lang="gez">ተወከፍ፡ ንባበ፡ ዚአየ፡
                  </foreign> (<foreign xml:lang="grc">λόγους</foreign>) <ref cRef="Prov." loc="4,10">Prov. 4,10</ref>; <foreign xml:lang="gez">ድምፀ፡ ንባቦሙ፡</foreign>
                  <ref cRef="Sap." loc="1,9">Sap. 1,9</ref>; <ref cRef="Koh." loc="5,6">Koh.
                     5,6</ref>; <ref cRef="Koh." loc="10,12">Koh. 10,12</ref>; <ref cRef="Koh." loc="10,20">Koh. 10,20</ref>; 4 <ref cRef="Reg." loc="19,4">Reg. 19,4</ref>;
                     <foreign xml:lang="gez">ንባብ፡ ፅሩዕ፡</foreign>
                  <foreign xml:lang="grc">ῥῆμα ἀργόν</foreign>
                  <ref cRef="Matth." loc="12,36">Matth. 12,36</ref>; <foreign xml:lang="gez">በአብዝኆ፡
                     ንባቦሙ፡ </foreign>
                  <foreign xml:lang="grc">πολυλογίᾳ</foreign> (<cit type="translation" xml:lang="la">
                     <quote>multiloquio</quote>
                  </cit>) <ref cRef="Matth. " loc="6,7">Matth. 6,7</ref>; <foreign xml:lang="gez">ንባበ፡ እግዚአብሔር፡</foreign>
                  <ref cRef="Kuf." loc="8.">Kuf. 8.</ref>
                  <sense n="a" xml:id="Da"> sermo i.e. <cit type="translation" xml:lang="la">
                        <quote>rumor</quote>
                     </cit>
                     <ref cRef="Kuf." loc="70.">Kuf. p. 70.</ref>
                  </sense>
                  <sense n="b" xml:id="Db"> i.e. <cit type="translation" xml:lang="la">
                        <quote>eloquium</quote>
                     </cit>, <foreign xml:lang="grc">λαλιά</foreign>
                     <foreign xml:lang="gez">ንባብኪ፡ አዳም፡</foreign>
                     <ref cRef="Cant." loc="4,3">Cant. 4,3</ref>.</sense>
                  <sense n="c" xml:id="Dc"> id quod dicitur in oratione, <cit type="translation" xml:lang="la">
                        <quote>summa</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>argumentum</quote>
                     </cit>: <foreign xml:lang="gez">ንባበ፡ ኵሉ፡ ነገር፡</foreign>
                     <ref cRef="Koh." loc="12,13">Koh. 12,13</ref>; <foreign xml:lang="gez">ዘንተ፡
                        ንባበ፡ ኀለዩ፡</foreign> (<foreign xml:lang="grc">ταῦτα ἐλογίσαντο</foreign>)
                        <ref cRef="Sap. " loc="2,21">Sap. 2,21</ref>.</sense>
                  <sense n="d" xml:id="Dd">
                     <cit type="translation" xml:lang="la">
                        <quote>causa</quote>
                     </cit>: <foreign xml:lang="gez">ዘይቀውም፡ ለንባበ፡</foreign> (v. <foreign xml:lang="gez">ለነቢበ፡</foreign>) <foreign xml:lang="gez">ባዕድ፡</foreign>
                     <foreign xml:lang="grc">ὁ προεστὼς ἀλλοτρίας κρίσεως</foreign>
                     <ref cRef="Prov." loc="26,17">Prov. 26,17</ref>.</sense>
                  <sense n="e" xml:id="De">
                     <foreign xml:lang="gez">ቀዳማ፡ ንባብ፡</foreign>
                     <cit type="translation" xml:lang="la">
                        <quote>praefatio</quote>
                     </cit>, Lud. <lbl expand="auctore, auctoritate">auct.</lbl> Greg. <sense n="2" xml:id="De2">
                        <cit type="translation" xml:lang="la">
                           <quote>loquendi facultas </quote>
                        </cit>et <cit type="translation" xml:lang="la">
                           <quote>ratio</quote>
                        </cit> (<foreign xml:lang="grc">λόγος</foreign>, <note>Vernunft</note>):
                        Cod. Mus. Brit. V<subc>III,1</subc>,a; <foreign xml:lang="gez">ሕፃናት፡ እለ፡ አልቦሙ፡
                           ንባበ፡</foreign>
                        <foreign xml:lang="grc">παῖδες ἀλόγιστοι</foreign>
                        <ref cRef="Sap." loc="12,25">Sap. 12,25</ref>.</sense>
                  </sense>
               </sense>
               
