               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>II,2</subc> (passim in libris mss. <foreign xml:lang="gez">አምገበ፡</foreign> <subc>II,1</subc> ut Sx.; Imperf. <foreign xml:lang="gez">ያመግብ፡</foreign> <ref cRef="Luc." loc="12,44">Luc. 12,44</ref> <lbl expand="romanae editionis">rom.</lbl>) <cit type="translation" xml:lang="la"><quote> praeficere rebus gerendis </quote></cit> aliquem, <cit type="translation" xml:lang="la"><quote> curam mandare </quote></cit> alicui; <cit type="translation" xml:lang="la"><quote> administratorem </quote></cit>, <cit type="translation" xml:lang="la"><quote> curatorem </quote></cit>, <cit type="translation" xml:lang="la"><quote> procuratorem constituere </quote></cit> aliquem; <lbl expand="construitur cum">c.c.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> <lbl expand="persona">pers.</lbl>: <foreign xml:lang="gez">መጋቢ፡ ዘአመገብዎ፡</foreign> F.M. 5,14; et <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ላዕለ፡</foreign> rei vel <lbl expand="persona">pers.</lbl>: <foreign xml:lang="gez">ኢታመግብ፡ ነኪረ፡ ላዕለ፡ ቤትከ፡</foreign> <ref cRef="Sir." loc="30,28">Sir. 30,28</ref>; <ref cRef="Luc." loc="12,44">Luc. 12,44</ref>; <foreign xml:lang="gez">ዘአመገብዎ፡ ላዕሌሆሙ፡</foreign> <cit type="translation" xml:lang="la"><quote> quem curatorem eorum </quote></cit> (pupillorum) <cit type="translation" xml:lang="la"><quote> constituerunt </quote></cit> F.N. 24,3, vel <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ዲበ፡</foreign>, ut: <foreign xml:lang="gez">እግዚአብሔር፡ አመገበከ፡ ዲቤሆሙ፡ ትቅትል፡ ወታሕይው፡</foreign> <ref cRef="Macc." loc="3">Macc. f. 3</ref>; vel <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">ለ፡</foreign> ut <ref cRef="Act." loc="7,10">Act. 7,10</ref> <lbl expand="romanae editionis">rom.</lbl>; vel <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">በ፡</foreign> rei, ut: <foreign xml:lang="gez">ለእመ፡ አመገቦ፡ ለብእሲ፡ በሠይጥ፡</foreign> F.N. 30, et <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">በ፡</foreign> muneris <ref cRef="1 Cor." loc="9,17">1 Cor. 9,17</ref>; <lbl expand="construitur cum">c.c.</lbl> <lbl expand="duplex">dupl.</lbl> <gramGrp> <case value="accusativus">Acc.</case> </gramGrp> (personae et muneris): <foreign xml:lang="gez">ኣሜግቦ፡ ምግበከ፡</foreign> <ref cRef="Jes." loc="22,21">Jes. 22,21</ref>. – (In Catal. Codd. <ref cRef="Aeth. Bibl. Bodl." loc="28 ">Aeth. Bibl. Bodl. p. 28 </ref> <foreign xml:lang="gez">በእንተ፡ አመግቦ፡</foreign> <cit type="translation" xml:lang="la"><quote> de mandato </quote></cit> (non: <cit type="translation" xml:lang="la"><quote> de feudo </quote></cit>) vertendum est). </sense>
               
            <sense xml:id="Tmain" xml:lang="en" source="#traces"> <cit type="transcription" xml:lang="gez"><quote>ʾamaggaba</quote></cit> <sense n="G" xml:id="TG"> <foreign xml:lang="gez">አመገበ፡</foreign> <cit type="transcription" xml:lang="gez"><quote>ʾamaggaba</quote></cit> <subc>II,2</subc> <foreign xml:lang="gez">ያሜግብ፡</foreign>, <foreign xml:lang="gez">ያመግብ፡</foreign> «<cit type="translation" xml:lang="fr"><quote>préposer</quote></cit>, <cit type="translation" xml:lang="fr"><quote>créer administrateur</quote></cit>» ― <foreign xml:lang="am">ሾመ፡</foreign> Ms. <ref type="BM" target="BNFabb217">BNFabb217</ref>, fol. 47r. <lb/>
