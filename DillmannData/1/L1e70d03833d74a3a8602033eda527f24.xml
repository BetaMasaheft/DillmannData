               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> <gramGrp> <pos expand="participium">part.</pos> </gramGrp> <cit type="translation" xml:lang="la">
                            <quote> obumbratus </quote>
                        </cit> i.e. <cit type="translation" xml:lang="la">
                            <quote> obscuratus </quote>
                        </cit>, <cit type="translation" xml:lang="la">
                            <quote> caligans </quote>
                        </cit>, <cit type="translation" xml:lang="la">
                            <quote> occaecatus </quote>
                        </cit>: <foreign xml:lang="gez">ጽሉል፡ አዕይንቲሆሙ፡</foreign> <ref cRef="Hen." loc="89,33">Hen. 89,33</ref>; <foreign xml:lang="gez">ልቦሙ፡</foreign> <ref cRef="Marc." loc="6,52">Marc. 6,52</ref>; <ref cRef="Marc." loc="8,17">Marc. 8,17</ref>; <foreign xml:lang="grc">τετυφωμένοι</foreign> (<foreign xml:lang="grc">τετυφλωμένοι</foreign>?) <ref cRef="2 Tim." loc="3,4">2 Tim. 3,4</ref>; <foreign xml:lang="gez">አብዳን፡ ወጽሉላነ፡ ልብ፡</foreign> <ref cRef="Did." loc="4">Did. 4</ref>; per zeugma etiam de auribus: <foreign xml:lang="gez">ጽሉል፡ ልቦሙ፡ ወእዘኒሆሙ፡</foreign> <ref cRef="Jer." loc="6,10">Jer. 6,10</ref>; quare <lbl expand="Vocabularium Aethiopicum, -a -a">Voc. Ae.</lbl>: <foreign xml:lang="gez">ጽሉል፡ ጽሙም፡ ዘ፡ ደንቅሮ።</foreign> </sense>
               
            <sense xml:lang="en" source="#traces" xml:id="Tmain"> <cit type="transcription" xml:lang="gez">
                            <quote>ṣǝllul</quote>
                        </cit> <cit type="translation" xml:lang="en">
                            <quote>cross-eyed</quote>
                        </cit>, ‘<cit type="translation" xml:lang="it">
                            <quote>guercio</quote>
                        </cit>’ <foreign xml:lang="gez">እመቦ፡ ሥዩም፡ ጽሙመ፡ ወእመኒ፡ ጽሉለ፡ ወሐንካሰ፡ ወዕውረ፡ ዘይሳለቅ፡ ይቁም።</foreign> ‘<cit type="translation" xml:lang="it">
                            <quote>se c’è un nominato alla carica che deride un sordo o un guercio o un zoppo o un cieco, sia segregato</quote>
                        </cit>’ <bibl>
                            <ptr target="bm:Bausi1995SenodosT"/>
                            <citedRange unit="page"> 168 l. 3-4 (ed.)</citedRange>
                        </bibl>, <bibl>
                            <ptr target="bm:Bausi1995SenodosV"/>
                            <citedRange unit="page"> 67 l. 24-25 (tr.)</citedRange>
                        </bibl> (‘Il termine <foreign xml:lang="gez">ጽሉል፡</foreign> potrebbe richiamare il tigrino <foreign xml:lang="ti">ጽሉል፡</foreign> «pazzo», cf. <bibl>
                            <ptr target="bm:DaBassano1918DictTgr"/>
                            <citedRange unit="page"> 419, 1214</citedRange>
                        </bibl>.’ <bibl>
                            <ptr target="bm:Bausi1995SenodosV"/>
                            <citedRange unit="page"> 67 n. 2</citedRange>
                        </bibl>) <sense n="L" xml:id="TL"> <foreign xml:lang="gez">ጽሉል፡</foreign> <cit type="transcription" xml:lang="gez">
                                <quote>ṣǝllul</quote>
                            </cit> <cit type="translation" xml:lang="en">
                                <quote>shaded</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>overshadowed</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>darkened</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>obscured</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>blinded</quote>
                            </cit>, (T) <cit type="translation" xml:lang="en">
                                <quote>deaf</quote>
                            </cit>, (Gr. 442) <cit type="translation" xml:lang="en">
                                <quote>stupid</quote>
                            </cit>; note <cit type="translation" xml:lang="en">
                                <quote>blinded</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>deaf</quote>
                            </cit>, originally <cit type="translation" xml:lang="en">
                                <quote>covered</quote>
                            </cit> (eyes, ears); for <cit type="translation" xml:lang="en">
                                <quote>deaf</quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>stupid</quote>
                            </cit> cp. Amh. <cit type="transcription" xml:lang="gez">
                                <quote>dänäqqʷärä</quote>
                            </cit> <cit type="translation" xml:lang="en">
                                <quote>be deaf </quote>
                            </cit>, <cit type="translation" xml:lang="en">
                                <quote>be stupid</quote>
                            </cit> <bibl>
                                <ptr target="bm:Leslau1987dic"/>
                                <citedRange unit="page"> 555b</citedRange>
                            </bibl> </sense> </sense>
