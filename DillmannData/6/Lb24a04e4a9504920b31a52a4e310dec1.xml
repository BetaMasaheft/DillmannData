               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> (nonnumquam <foreign xml:lang="gez">መላጺ፡</foreign>) <gramGrp>
                     <pos expand="Substantivum">subst.</pos>
                     <gen value="masculinum">m.</gen>
                  </gramGrp> et <gramGrp>
                     <gen value="femininus">fem.</gen>
                  </gramGrp> (<ref cRef="Jes." loc="7,20">Jes. 7,20</ref>); <lbl expand="pluralis">Pl.</lbl>
                  <foreign xml:lang="gez">መላጽያት፡</foreign> et <foreign xml:lang="gez">መላጼያት፡</foreign> (<ref cRef="Sx. Ter" loc="6">Sx. Ter 6</ref>; <ref cRef="Sx. Ter" loc="15">Sx. Ter 15</ref>; M.M. f. 214); <cit type="translation" xml:lang="la">
                     <quote>novacula</quote>
                  </cit>, <cit type="translation" xml:lang="la">
                     <quote>culter tonsoris</quote>
                  </cit>: <foreign xml:lang="grc">ξυρόν</foreign>
                  <ref cRef="Jes." loc="7,20">Jes. 7,20</ref>; <ref cRef="Ps." loc="51,2">Ps.
                     51,2</ref>; <ref cRef="Num." loc="6,5">Num. 6,5</ref>; <ref cRef="Jud." loc="16,17">Jud. 16,17</ref> (<foreign xml:lang="grc">σίδηρος</foreign>); <ref cRef="Lev." loc="19,28">Lev. 19,28</ref>; <foreign xml:lang="gez">መላጼ፡
                     ቀራጺ፡</foreign>
                  <ref cRef="Hez." loc="5,1">Hez. 5,1</ref>. Usurpatur de quovis <cit type="translation" xml:lang="la">
                     <quote>cultro acutiori</quote>
                  </cit>: <foreign xml:lang="gez">ከመ፡ መላጼ፡ በሊሕ፡ ዘክልኤ፡ አፉሁ፡</foreign>
                  <foreign xml:lang="grc">ῥομφάια</foreign>
                  <ref cRef="Sir." loc="21,3">Sir. 21,3</ref>; <foreign xml:lang="gez">ረሰዮ፡ አፉየ፡ ከመ፡
                     መላጼ፡</foreign>
                  <ref cRef="Jes." loc="49,2">Jes. 49,2</ref>; <ref cRef="Hebr." loc="4,12">Hebr.
                     4,12</ref>; de <foreign xml:lang="grc">ψήφῳ</foreign>
                  <ref cRef="Ex. " loc="4,25">Ex. 4,25</ref>; de cultro medici: <foreign xml:lang="gez">ከመ፡ ጠቢብ፡ ዐቃቤ፡ ሥራይ፡ ዘይጠብሕ፡ በመላጼ፡ </foreign>
                  <ref cRef="Did." loc="10.">Did. 10.</ref> – <lbl expand="Vocabularium Aethiopicum, -a -a.">Voc. Ae.</lbl>: <foreign xml:lang="gez">መላጼ፡ ዘ፡ ምላጭ።</foreign>
