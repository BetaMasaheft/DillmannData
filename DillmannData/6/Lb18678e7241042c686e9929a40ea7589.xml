               <sense xml:id="Dmain" xml:lang="la" source="#dillmann"> <subc>I,1</subc> (<ref cRef="Marc." loc="1,42">Marc. 1,42</ref> <lbl expand="romanae editionis">rom.</lbl> legitur <foreign xml:lang="gez">ሐየወ፡</foreign>, errore typographi) [<foreign xml:lang="he">חָיָה</foreign> <foreign xml:lang="syr">ܚܝܳܐ</foreign> <foreign xml:lang="ar">حَيَّ</foreign>; in lingua amh. quaedam derivata conservata sunt] Imperf. <foreign xml:lang="gez">የሐዩ፡</foreign> (<foreign xml:lang="gez">የሐይው፡</foreign>), <gramGrp> <pos expand="Subjunctivus">Subj.</pos> </gramGrp> <foreign xml:lang="gez">ይሕየው፡</foreign>; Imperat. <foreign xml:lang="gez">ሕየው፡</foreign>, Infin. <foreign xml:lang="gez">ሐዪው፡</foreign> et <foreign xml:lang="gez">ሐይው፡</foreign>, <foreign xml:lang="gez">ሐይዎ፡</foreign> et <foreign xml:lang="gez">ሐይዎት፡</foreign>, <sense n="1" xml:id="D1"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> vivere </t:quote></cit> <ref cRef="Gen." loc="5,3">Gen. 5,3</ref> <lbl expand="sequens">seq.</lbl>; <foreign xml:lang="gez">ሐዮክ፡</foreign> <ref cRef="Sir." loc="41,4">Sir. 41,4</ref>; <foreign xml:lang="gez">ንሕነኪ፡ ሕይወተ፡ ነሐዩ፡</foreign> <ref cRef="Sir." loc="48,11">Sir. 48,11</ref>; <foreign xml:lang="gez">ሐይውኒ፡ ወመዊትኒ፡</foreign> <ref cRef="Sir." loc="11,14">Sir. 11,14</ref>; <ref cRef="Sir." loc="22,11">Sir. 22,11</ref>; <ref cRef="Ps." loc="20,4">Ps. 20,4</ref>; <foreign xml:lang="gez">ሐይው፡ ለነዋኅ፡ መዋዕል፡</foreign> <ref cRef="Bar." loc="3,14">Bar. 3,14</ref> (<foreign xml:lang="grc">μακροβίωσις</foreign>); <ref cRef="Job" loc="7,16">Job 7,16</ref>; <ref cRef="4 Esr." loc="6,57">4 Esr. 6,57</ref>; <ref cRef="4 Esr." loc="7,18">4 Esr. 7,18</ref>; <ref cRef="4 Esr." loc="8,9">4 Esr. 8,9</ref>; <ref cRef="Hab. " loc="2,4">Hab.  2,4</ref>; <ref cRef="Joh." loc="5,25">Joh. 5,25</ref> <lbl expand="sequens">seq.</lbl>, aliis in locis innumeris; <foreign xml:lang="gez">ለዓለም፡ ሕየው፡</foreign> (v. <foreign xml:lang="gez">ሕያው፡</foreign>) <ref cRef="Dan." loc="3,9">Dan. 3,9</ref>; <ref cRef="Dan." loc="6,21">Dan. 6,21</ref>, (<lbl expand="videas">vid.</lbl> <foreign xml:lang="gez">ነጋሢ፡</foreign>); <foreign xml:lang="gez">ሐይወት፡ ነፍስከ፡</foreign> <foreign xml:lang="grc">ζῇ ἡ ψυχή σου</foreign>! <ref cRef="1 Reg." loc="1,26">1 Reg. 1,26</ref>. <sense n="a" xml:id="D1a"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> vitam transigere </t:quote></cit>: <foreign xml:lang="gez">ሕየው፡ በፍሥሓ፡</foreign> <ref cRef="Koh." loc="7,14">Koh. 7,14</ref>; <foreign xml:lang="gez">ሠናይ፡ ሐይው፡ በትፍሥሕት፡</foreign> <ref cRef="Sir." loc="41,13">Sir. 41,13</ref>; <foreign xml:lang="gez">ዘረወ፡ ንዋየ፡ አቡሁ፡ እንዘ፡ የሐዩ፡ በምርዐት፡</foreign> <ref cRef="Did." loc="10">Did. 10</ref>; <foreign xml:lang="gez">ኢትኅድግዎሙ፡</foreign> (<foreign xml:lang="gez">ለውሉድክሙ፡</foreign>) <foreign xml:lang="gez">ዕሩዐ፡ ይሕየው፡</foreign> <ref cRef="Did. " loc="22.">Did.  22.</ref> 
</sense> <sense n="b" xml:id="D1b"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> vitam sustentare </t:quote></cit> re, <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">በ</foreign>: <foreign xml:lang="gez">በመጥባሕትከ፡ ሕየው፡</foreign> <ref cRef="Gen." loc="27,40">Gen. 27,40</ref>; <ref cRef="Deut." loc="8,3">Deut. 8,3</ref>; <ref cRef="Kuf. " loc="26.">Kuf.  26.</ref> 
</sense> <sense n="c" xml:id="D1c"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> vivum servari </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> superstitem esse </t:quote></cit> <ref cRef="Jer." loc="45,2">Jer. 45,2</ref>; <ref cRef="Hez." loc="3,21">Hez. 3,21</ref>; <ref cRef="Hez. " loc="18,9">Hez.  18,9</ref>. 
</sense> 
</sense> <sense n="2" xml:id="D2"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> reviviscere </t:quote></cit>, i.e. <sense n="a" xml:id="D2a"> de animo: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> refici </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> recreari </t:quote></cit>: <foreign xml:lang="gez">ሐይወት፡ መንፈሳ፡</foreign> <ref cRef="Kuf." loc="31">Kuf. 31</ref>; <ref cRef="Kuf." loc="43">Kuf. 43</ref>; <foreign xml:lang="gez">ሐይዎ፡ ልቡ፡ ወነፍሱ፡</foreign> <ref cRef="Gen." loc="45,26">Gen. 45,26</ref>. 
</sense> <sense n="b" xml:id="D2b"> de plantis: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> germinare </t:quote></cit> <ref cRef="4 Esr." loc="8,47">4 Esr. 8,47</ref>. 
</sense> <sense n="c" xml:id="D2c"> de mortuis: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> in vitam revocari </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> resurgere </t:quote></cit> <ref cRef="Hez." loc="37,3">Hez. 37,3</ref>; <ref cRef="Jes. " loc="26,19">Jes.  26,19</ref> (<foreign xml:lang="grc">ἐγερθήσομαι</foreign>); <foreign xml:lang="gez">ይብሉ፡ ኢየሐይዉ፡ ምዉታን፡</foreign> <foreign xml:lang="grc">λέγουσαν ἀνάστασιν μὴ εἶναι</foreign> <ref cRef="Marc." loc="12,18">Marc. 12,18</ref> <lbl expand="romanae editionis">rom.</lbl>; <ref cRef="Marc." loc="12,23">Marc. 12,23</ref> <lbl expand="romanae editionis">rom.</lbl>; <ref cRef="Luc." loc="20,35">Luc. 20,35</ref>; <ref cRef="Luc." loc="20,37">Luc. 20,37</ref>; <ref cRef="1 Cor." loc="15,12">1 Cor. 15,12</ref> <lbl expand="sequens">seq.</lbl>; etiam de peccato: <foreign xml:lang="gez">ሐይወት፡ ኀጢአት፡</foreign> <foreign xml:lang="grc">ἀνέζησε</foreign> <ref cRef="Rom." loc="7,9">Rom. 7,9</ref>. 
</sense> <sense n="d" xml:id="D2d"> a morbo, vulneribus <sense n="α" xml:id="D2dα"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> revalescere </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> convalescere </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> sanari </t:quote></cit>: <foreign xml:lang="gez">እመ፡ ደወየ፡ ኢይሴፎ፡ ሐይወ፡</foreign> <ref cRef="Job" loc="24,23">Job 24,23</ref>; <foreign xml:lang="gez">ሐየውነ፡</foreign> <foreign xml:lang="grc">ἰάθημεν</foreign> <ref cRef="Jes." loc="53,5">Jes. 53,5</ref>; <ref cRef="Jer." loc="28,9">Jer. 28,9</ref>; <ref cRef="Hebr." loc="12,13">Hebr. 12,13</ref>; <ref cRef="Matth." loc="8,13">Matth. 8,13</ref>; <ref cRef="Joh." loc="5,14">Joh. 5,14</ref>; <lbl expand="cum">c.</lbl> <foreign xml:lang="gez">እምነ፡</foreign> morbi vel vulneris: <ref cRef="Hez." loc="16,6">Hez. 16,6</ref>; <ref cRef="Jes." loc="38,9">Jes. 38,9</ref>; <ref cRef="Jes." loc="38,21">Jes. 38,21</ref>; <ref cRef="4 Reg." loc="1,2">4 Reg. 1,2</ref>; <ref cRef="Apoc." loc="13,12">Apoc. 13,12</ref>. 
</sense> <sense n="β" xml:id="D2dβ"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> consanescere </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> sanari </t:quote></cit>: <foreign xml:lang="gez">ቍስለ፡ ሞቱ፡ ሐይወ፡</foreign> <ref cRef="Apoc." loc="13,3">Apoc. 13,3</ref>; <foreign xml:lang="gez">ቅጥቃጤ፡ ዘኢየሐዩ፡</foreign> <foreign xml:lang="grc">συντριβὴ ἀνίατος</foreign> <ref cRef="Prov." loc="6,15">Prov. 6,15</ref>; <ref cRef="Lev." loc="13,37">Lev. 13,37</ref>; <ref cRef="Marc." loc="1,42">Marc. 1,42</ref>. 
</sense> 
</sense> <sense n="e" xml:id="D2e"> de rebus fractis: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> reparari </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> restitui </t:quote></cit> <ref cRef="Jer. " loc="19,11">Jer.  19,11</ref>. 
</sense> 
</sense> <sense n="3" xml:id="D3"> <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> sanum et salvum esse </t:quote></cit> <sense n="a" xml:id="D3a"> de valetudine: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> bene valere </t:quote></cit> <ref cRef="3 Joh." loc="2">3 Joh. 2</ref>; <ref cRef="Luc." loc="7,10">Luc. 7,10</ref>. 
</sense> <sense n="b" xml:id="D3b"> de salute aeterna: <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> salvum fieri </t:quote></cit>, <cit type="translation" xml:lang="la"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0"> salvari </t:quote></cit> (<foreign xml:lang="grc">σωθῆναι</foreign>) <ref cRef="Luc." loc="18,26">Luc. 18,26</ref> <lbl expand="romanae editionis">rom.</lbl>; <ref cRef="Act." loc="15,1">Act. 15,1</ref>; <ref cRef="Rom. " loc="11,26">Rom.  11,26</ref>; <ref cRef="Sir." loc="3,1">Sir. 3,1</ref>. 
</sense> 
</sense> </sense>
               
            <sense xml:id="Tmain" xml:lang="en" source="#traces"> <cit type="transcription" xml:lang="gez"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">ḥaywa</t:quote></cit> <sense n="G" xml:id="TG"> <foreign xml:lang="gez">ሐይወ፡</foreign> <cit type="transcription" xml:lang="gez"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">ḥaywa</t:quote></cit> <subc>I,1</subc> <foreign xml:lang="gez">የሐዩ፡</foreign>, <foreign xml:lang="gez">ይሕየው</foreign> «<cit type="translation" xml:lang="fr"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">vivre</t:quote></cit>, <cit type="translation" xml:lang="fr"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">guérir</t:quote></cit> (neutre), <cit type="translation" xml:lang="fr"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">se rétablir</t:quote></cit>, <cit type="translation" xml:lang="fr"><t:quote xmlns:t="http://www.tei-c.org/ns/1.0">se porter bien</t:quote></cit> » ― <foreign xml:lang="am">ዳነ፡</foreign> Ms. <ref type="BM" target="BNFabb217">BNFabb217</ref>, fol. 28v. <lb/>
