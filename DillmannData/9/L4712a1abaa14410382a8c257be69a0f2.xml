            <entry xml:id="L4712a1abaa14410382a8c257be69a0f2" n="8225">
               <form>
                  <foreign xml:lang="gez">አግሀደ</foreign>
               </form>
               <sense xml:lang="la" source="#dillmann" xml:id="Dmain"> <subc>II,1</subc> <sense n="1" xml:id="D1">
                     <cit type="translation" xml:lang="la">
                        <quote>publicare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>evulgare</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>divulgare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>palam facere</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>apertum</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>notum</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>publicum facere</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>manifestare</quote>
                     </cit>: <ref cRef="Matth." loc="12,16">Matth. 12,16</ref>; <ref cRef="Hen." loc="9,6">Hen. 9,6</ref>; <ref cRef="Hen." loc="9,8">Hen. 9,8</ref>;
                        <foreign xml:lang="gez">አግህድ፡ ሎቱ፡ ፍጻሜ፡ ዘይመጽእ፡ </foreign>
                     <ref cRef="Hen." loc="10,2">Hen. 10,2</ref>; <foreign xml:lang="gez">እስመ፡ በዛቲ፡
                        ዕለት፡</foreign> (sc. epiphaniorum) <foreign xml:lang="gez">አግሀደ፡ እግዚእነ፡ ኢየሱስ፡
                        ክርስቶስ፡ ርእሶ፡ እስመ፡ ውእቱ፡ ኢያግሀደ፡ ርእሶ፡ ለመኑሂ፡ መጠነ፡ ፴ ዓም፡</foreign>
                     <ref cRef="Sx. Ter" loc="11">Sx. Ter 11</ref>; Simon Magus <foreign xml:lang="gez">ያግህድ፡ ሕገ፡ ዘስሙ፡ ሲሞናዊ፡</foreign> (i.e. Simoniam) <ref cRef="Clem." loc="67">Clem. f. 67</ref>; Constantinus M. <foreign xml:lang="gez">ያግህድ፡ ርትዕት፡ ሃይማኖተ፡</foreign>
                     <ref cRef="Clem." loc="74">Clem. f. 74</ref>; F.N. 31 (<lbl expand="videas">vid. sub</lbl>
                     <foreign xml:lang="gez">ግዕዛን፡</foreign>).</sense>
                  <sense n="2" xml:id="D2">
                     <cit type="translation" xml:lang="la">
                        <quote>dilucidare</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>perspicuum facere</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>demonstrare</quote>
                     </cit>: <foreign xml:lang="gez">ጳውሎስ፡ ያግህድ፡ ለነ፡ ምስጢረ፡</foreign> (<foreign xml:lang="grc">διατρανοῦν</foreign>) Cyr. c. <ref cRef="Pall." loc="82">Pall. f. 82</ref>; <foreign xml:lang="gez">ወይእዜሰ፡ አግሀደ፡ </foreign> (sc.
                     hoc) <foreign xml:lang="gez">በብሂሎቱ፡</foreign>
                     <ref cRef="Chrys. ho." loc="3">Chrys. ho. 3</ref>; <foreign xml:lang="gez">ያግህድ፡ ሎሙ፡ እምውስተ፡ ዘተአምነ፡ በኀቤሆሙ፡</foreign>
                     <foreign xml:lang="grc">ἀπόδειξις γίγνεται ἀπὸ τῶν ἤδη πεπιστευμένων</foreign>
                     <ref cRef="Chrys. ho." loc="13">Chrys. ho. 13</ref>; al. crebro.</sense>
                  <sense n="3" xml:id="D3">
                     <cit type="translation" xml:lang="la">
                        <quote>palam</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>publice</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>aperte</quote>
                     </cit>, <cit type="translation" xml:lang="la">
                        <quote>libere agere</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>facere</quote>
                     </cit> aliquid vel <cit type="translation" xml:lang="la">
                        <quote>loqui</quote>
                     </cit> vel <cit type="translation" xml:lang="la">
                        <quote>profiteri</quote>
                     </cit>: <foreign xml:lang="gez">በኀበ፡ አስተርአየ፡ ወአግሀደ፡ ብርያል፡</foreign>
                     <ref cRef="Asc. Jes." loc="4,18">Asc. Jes. 4,18</ref>; <foreign xml:lang="grc">παῤῥησιάζεσθαι </foreign>
                     <ref cRef="Ps." loc="11,6">Ps. 11,6</ref>
                     <lbl expand="varia lectio">var.</lbl>; coepit scortari <foreign xml:lang="gez">በኅቡእ፡ ወሶበ፡ ተከሥተ፡ ግብራ፡ አግሀደት፡ ገቢረ፡ ርኵስና፡ ወኮነት፡ ትዜሙ፡ በገሃድ፡</foreign>
                     <ref cRef="Sx. Sen." loc="3">Sx. Sen. 3</ref>; oculi <foreign xml:lang="gez">ነጽሮ፡ እለ፡ አግሀዳ፡</foreign> qui libere aspexerunt, Lud. e Syn.; <foreign xml:lang="gez">ስመ፡ ክርስቶስ፡ አግሀዱ፡</foreign> (publice professi sunt) Sx. <ref cRef="Masc." loc="28 ">Masc. 28 </ref>Enc.</sense>
               </sense>
               
